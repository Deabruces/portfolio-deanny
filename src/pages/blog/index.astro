---
import Layout from "../../layouts/Layout.astro";
import { getCollection, getEntry } from "astro:content";
import { Image } from "astro:assets";

const posts = await getCollection("posts");
posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const categoryList = await getCollection("categories");
---

<Layout
  title="Blog"
  description="Lee los últimos artículos de Deanny Bruces sobre desarrollo web, tecnología y más. Un espacio para compartir conocimientos y experiencias."
  keywords="blog, desarrollo web, tecnología, tutoriales, frontend, programación, JavaScript, CSS, HTML, React"
>
  <section class="blog-page content-grid">
    <!-- Background Elements -->
    <div class="blog-background full-width" aria-hidden="true">
      <div class="floating-blob blob-1"></div>
      <div class="floating-blob blob-2"></div>
      <div class="floating-blob blob-3"></div>
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
    </div>

    <div class="blog-container">
      <!-- Hero Section -->
      <div class="blog-hero">
        <div class="hero-badge">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
          >
            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
          </svg>
          <span>Blog</span>
        </div>

        <h1 class="page-title">
          Mi <span class="page-title__span">Blog</span>
        </h1>
        <p class="page-subtitle">
          ¡Bienvenid@s a mi blog! Aquí comparto ideas, tutoriales y reflexiones
          sobre desarrollo web, diseño, accesibilidad y tecnología.
        </p>
      </div>

      <div id="init-floating"></div>
      <!-- Blog Grid -->
      <div class="blog-grid">
        {
          posts.map((post, index) => (
            <article
              class="blog-card"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="card-image">
                <Image
                  src={post.data.image}
                  alt={`Imagen para ${post.data.title}`}
                  loading="lazy"
                />
                <div class="image-overlay">
                  <span class="post-date">
                    <svg
                      width="14"
                      height="14"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2.5"
                    >
                      <circle cx="12" cy="12" r="10" />
                      <polyline points="12 6 12 12 16 14" />
                    </svg>
                    {new Date(post.data.date).toLocaleDateString("es-ES", {
                      day: "numeric",
                      month: "short",
                      year: "numeric",
                    })}
                  </span>
                </div>
              </div>

              <div class="blog-content">
                {post.data.categories && post.data.categories.length > 0 && (
                  <div class="meta">
                    {post.data.categories.slice(0, 2).map((cat) => {
                      const category = categoryList.find(
                        (c) => c.id === cat.id,
                      );
                      return (
                        <a
                          href={`/blog/categories/${cat.id}`}
                          class="category"
                          aria-label={`Ver artículos de la categoría ${category?.data.name}`}
                        >
                          {category?.data.name}
                        </a>
                      );
                    })}
                  </div>
                )}
                <h2>
                  <a
                    href={`/blog/${post.id}`}
                    aria-label={`Leer más sobre ${post.data.title}`}
                  >
                    {post.data.title}
                  </a>
                </h2>
                <p>{post.data.summary}</p>
                <div class="card-footer">
                  <a
                    class="read-more"
                    href={`/blog/${post.id}`}
                    aria-label={`Continuar leyendo ${post.data.title}`}
                  >
                    Leer más
                    <svg
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2.5"
                    >
                      <line x1="5" y1="12" x2="19" y2="12" />
                      <polyline points="12 5 19 12 12 19" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ============================================
   Blog Page Styles - Modern Glassmorphic Design
   ============================================ */

  /* Main Section */
  .blog-page {
    position: relative;

    overflow: hidden;

    min-height: 100vh;
    padding: 12rem 0 6rem;

    background: light-dark(
      linear-gradient(to top, #fdf4ff, #fef3c7, #fef9c3),
      linear-gradient(to top, #1e1b4b, #431407, #451a03)
    );
  }

  /* Background Elements */
  .blog-background {
    pointer-events: none;

    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;

    overflow: hidden;

    width: 100%;
    height: 100%;
  }

  /* Floating Blobs */
  .floating-blob {
    position: absolute;

    width: 40rem;
    height: 40rem;
    border-radius: 50%;

    opacity: 0.15;
    filter: blur(120px);

    animation: blobFloat 20s ease-in-out infinite;
  }

  .blob-1 {
    top: -10%;
    left: -10%;
    background: linear-gradient(135deg, #a855f7, #ec4899);
    animation-delay: 0s;
  }

  .blob-2 {
    top: 40%;
    right: -15%;
    background: linear-gradient(135deg, #06b6d4, #8b5cf6);
    animation-delay: 7s;
  }

  .blob-3 {
    bottom: -10%;
    left: 30%;
    background: linear-gradient(135deg, #f43f5e, #a855f7);
    animation-delay: 14s;
  }

  /* Gradient Orbs */
  .gradient-orb {
    position: absolute;

    border-radius: 50%;

    opacity: 0.2;
    filter: blur(80px);

    animation: orbPulse 15s ease-in-out infinite;
  }

  .orb-1 {
    top: 20%;
    right: 10%;

    width: 25rem;
    height: 25rem;

    background: radial-gradient(circle, #06b6d4, transparent);
  }

  .orb-2 {
    bottom: 10%;
    left: 15%;

    width: 30rem;
    height: 30rem;

    background: radial-gradient(circle, #a855f7, transparent);
  }

  /* Container */
  .blog-container {
    position: relative;
    z-index: 1;

    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .blog-hero {
    margin-bottom: 5rem;
    text-align: center;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-badge {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    margin-bottom: 1.5rem;
    padding: 0.6rem 1.2rem;
    border: 1px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 30%));
    border-radius: 2rem;

    font-size: 0.9rem;
    font-weight: 600;
    color: light-dark(#8b5cf6, #a78bfa);

    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 15%));
    backdrop-filter: blur(10px);

    animation: badgeGlow 3s ease-in-out infinite;
  }

  .hero-badge svg {
    width: 18px;
    height: 18px;
    color: light-dark(#8b5cf6, #a78bfa);
  }

  .page-title {
    margin-bottom: 1.5rem;

    font-family: Poppins, sans-serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    color: light-dark(#1e1b4b, #f8fafc);
  }

  .page-title__span {
    background: linear-gradient(135deg, #a855f7, #06b6d4, #ec4899);
    background-clip: text;
    background-size: 200% 200%;

    animation: gradientShift 8s ease infinite;

    -webkit-text-fill-color: transparent;
  }

  .page-subtitle {
    max-width: 800px;
    margin: 0 auto;

    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.7;
    color: light-dark(#64748b, #cbd5e1);
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem;

    opacity: 0;

    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.2s;
  }

  /* Blog Card */
  .blog-card {
    position: relative;

    overflow: hidden;
    display: flex;
    flex-direction: column;

    border: 2px solid light-dark(rgb(168 85 247 / 15%), rgb(168 85 247 / 30%));
    border-radius: 1.5rem;

    text-align: left;

    opacity: 0;
    background: light-dark(rgb(255 255 255 / 80%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(20px);
    box-shadow:
      0 10px 40px light-dark(rgb(168 85 247 / 8%), rgb(0 0 0 / 20%)),
      0 0 0 1px light-dark(rgb(255 255 255 / 50%), rgb(255 255 255 / 5%)) inset;

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    animation: fadeInScale 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .blog-card:hover {
    transform: translateY(-10px);
    border-color: light-dark(rgb(168 85 247 / 30%), rgb(168 85 247 / 50%));
    box-shadow:
      0 20px 60px light-dark(rgb(168 85 247 / 15%), rgb(0 0 0 / 40%)),
      0 0 0 1px light-dark(rgb(255 255 255 / 80%), rgb(255 255 255 / 10%)) inset;
  }

  /* Card Image */
  .card-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16 / 9;
    width: 100%;
  }

  .card-image img {
    width: 100%;
    height: 100%;

    object-fit: cover;
    object-position: center;

    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .blog-card:hover .card-image img {
    transform: scale(1.08);
  }

  /* Image Overlay */
  .image-overlay {
    pointer-events: none;

    position: absolute;
    right: 0;
    bottom: 0;

    display: flex;
    justify-content: flex-end;

    padding: 1rem;
  }

  .post-date {
    pointer-events: auto;

    display: inline-flex;
    gap: 0.4rem;
    align-items: center;

    padding: 0.5rem 1rem;
    border-radius: 2rem;

    font-size: 0.8rem;
    font-weight: 700;
    color: #fff;

    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow:
      0 4px 15px rgb(168 85 247 / 30%),
      0 0 0 1px rgb(255 255 255 / 20%) inset;

    transition: all 0.3s ease;
  }

  .post-date svg {
    flex-shrink: 0;
    width: 14px;
    height: 14px;
  }

  /* Blog Content */
  .blog-content {
    display: flex;
    flex: 1;
    flex-direction: column;
    gap: 1rem;

    min-height: 0;
    padding: 1.75rem;
  }

  /* Meta */
  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
  }

  .category {
    display: inline-flex;
    align-items: center;

    padding: 0.4rem 1rem;
    border-radius: 2rem;

    font-size: 0.7rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;

    background: linear-gradient(135deg, #06b6d4, #8b5cf6);
    box-shadow: 0 2px 10px rgb(6 182 212 / 20%);

    transition: all 0.3s ease;
  }

  .category:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgb(6 182 212 / 30%);
  }

  /* Title */
  .blog-content h2 {
    margin: 0;

    font-family: Poppins, sans-serif;
    font-size: clamp(1.2rem, 2vw, 1.4rem);
    font-weight: 700;
    line-height: 1.3;
    color: light-dark(#1e1b4b, #f8fafc);
    overflow-wrap: break-word;

    transition: color 0.3s ease;
  }

  .blog-content h2 a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .blog-card:hover .blog-content h2 a {
    color: light-dark(#8b5cf6, #a78bfa);
  }

  /* Summary */
  .blog-content p {
    overflow: hidden;
    display: -webkit-box;
    flex: 1 1 auto;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;

    margin: 0;

    font-size: 0.95rem;
    line-height: 1.6;
    color: light-dark(#64748b, #cbd5e1);
    overflow-wrap: break-word;
  }

  /* Card Footer */
  .card-footer {
    display: flex;
    justify-content: flex-start;
    margin-top: auto;
  }

  .read-more {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    padding: 0.75rem 1.5rem;
    border: 1px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 30%));
    border-radius: 2rem;

    font-size: 0.9rem;
    font-weight: 600;
    color: light-dark(#8b5cf6, #a78bfa);
    text-decoration: none;
    white-space: nowrap;

    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 15%));

    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .read-more svg {
    flex-shrink: 0;
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .read-more:hover {
    transform: translateX(3px);

    border-color: var(--deanny-cian);

    color: #fff;

    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow: 0 8px 25px rgb(168 85 247 / 30%);
  }

  .read-more:hover svg {
    transform: translateX(3px);
  }

  /* Focus Styles */
  .read-more:focus-visible,
  .category:focus-visible {
    outline: 3px solid light-dark(#a855f7, #a78bfa);
    outline-offset: 4px;
  }

  /* Responsive */
  @media (width >= 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (width >= 1200px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }

  @media (width <= 767px) {
    .blog-page {
      padding: 6rem 0 4rem;
    }

    .blog-hero {
      margin-bottom: 3rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .blog-content {
      gap: 0.875rem;
      padding: 1.5rem;
    }

    .blog-content h2 {
      font-size: 1.2rem;
    }

    .blog-content p {
      font-size: 0.9rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
    }
  }

  /* Animations */
  @keyframes blobFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }

    33% {
      transform: translate(-30px, -50px) scale(1.1);
    }

    66% {
      transform: translate(40px, 30px) scale(0.9);
    }
  }

  @keyframes orbPulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.2;
    }

    50% {
      transform: scale(1.1);
      opacity: 0.3;
    }
  }

  @keyframes badgeGlow {
    0%,
    100% {
      box-shadow: 0 0 20px rgb(168 85 247 / 20%);
    }

    50% {
      box-shadow: 0 0 30px rgb(168 85 247 / 40%);
    }
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes fadeInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fadeInScale {
    from {
      transform: scale(0.95);
      opacity: 0;
    }

    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
