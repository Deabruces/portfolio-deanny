---
import Layout from "../../layouts/Layout.astro";
import "../../assets/styles/reset.css";
import "../../assets/styles/global.css";
import { getCollection } from "astro:content";
import CardBlog from "../../components/CardBlog.astro";

const posts = await getCollection("posts");
---

<Layout>
  <section class="blog-list">
    <div class="blog">
      <h1 class="blog_title">My <span>Blog</span></h1>
      <p class="blog_description">
        Welcome to my blog! Here, I share insights, tutorials, and thoughts on
        web development, design, and technology. Stay tuned for updates!
      </p>
      <div class="blog_posts">
        {posts.map((post) => <CardBlog post={post} />)}
      </div>
    </div>
  </section>
</Layout>

<style>
  .blog_title {
    font-size: 50px;
    color: var(--text-color);
    font-weight: 600;
    margin-bottom: 50px;
    text-align: center;
  }

  .blog_title span {
    color: var(--acento-btn);
  }

  .blog_description {
    font-size: 1.2rem;
    color: var(--text-color);
    margin-bottom: 40px;
    text-align: justify;
  }

  .blog_posts {
    display: grid;
    grid-template-columns: repeat(auto-fit, 320px);
    gap: 3rem;
  }
</style>
