---
import PageTitle from "components/PageTitle.astro";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
const projects = await getCollection("projects");
---

<Layout
  title="Proyectos"
  description="Explora los proyectos de desarrollo web de Deanny Bruces. Una colecciÃ³n de aplicaciones web, sitios web y otros proyectos que demuestran mis habilidades y experiencia."
  keywords="proyectos web, portfolio, desarrollo web, aplicaciones web, sitios web, React, Astro, JavaScript, frontend"
>
  <section class="projects content-grid">
    <div class="breakout">
      <PageTitle>
        Algunos de mis <span>Proyectos Recientes</span>
      </PageTitle>
      <div class="cards">
        {
          projects.map((project) => {
            return (
              <Card
                link={`/projects/${project.id}`}
                image={project.data.image}
                title={project.data.title}
                summary={project.data.summary}
                date={project.data.date}
                tags={project.data.tags || []}
                identifier={project.id}
              />
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  /** Mobile First **/

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, 340px);
    flex-wrap: wrap;
    gap: 60px;
    justify-content: center;

    padding: 0;
  }

  .projects-title {
    margin-top: 9rem;
    margin-bottom: 4rem;
    color: var(--text-color);
    text-align: center;
  }

  .projects-title span {
    color: var(--acento-btn);
  }

