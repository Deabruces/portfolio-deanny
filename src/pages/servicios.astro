---
import Layout from "../layouts/Layout.astro";
import Seo from "../assets/icons/seo.svg";
import WebProgrammer from "../assets/icons/web-programmer.svg";
import MttoWeb from "../assets/icons/mtto-web.svg";
import Branding from "../assets/icons/branding.svg";
import Time from "../assets/icons/time.svg";
import Analisis from "../assets/icons/analisis.svg";
import Pago from "../assets/icons/pago.svg";
import Ecommerce from "../assets/icons/ecommerce.svg";
import Automation from "../assets/icons/automation.svg";
import AiBrain from "../assets/icons/ai-brain.svg";
import Accessibility from "../assets/icons/accessibility.svg";
---

<Layout
  title="Servicios"
  description="Servicios profesionales de desarrollo web, diseño, SEO, automatización y más. Soluciones digitales completas para hacer crecer tu negocio online."
  keywords="servicios web, desarrollo web, diseño web, SEO, e-commerce, automatización, AI, accesibilidad web, mantenimiento web"
>
  <section class="services-page content-grid">
    <!-- Background Elements -->
    <div class="services-background full-width" aria-hidden="true">
      <div class="floating-blob blob-1"></div>
      <div class="floating-blob blob-2"></div>
      <div class="floating-blob blob-3"></div>
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
    </div>

    <div class="services-container">
      <!-- Hero Section -->
      <div class="services-hero">
        <div class="hero-badge">
          <svg
            class="badge-icon"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
            <path d="M2 17l10 5 10-5"></path>
            <path d="M2 12l10 5 10-5"></path>
          </svg>
          <span>Servicios</span>
        </div>

        <h1 class="page-title">
          Todo lo que necesitas <br />
          <span class="page-title__span">para triunfar online</span>
        </h1>
        <p class="page-subtitle">
          Soluciones completas diseñadas para hacer crecer tu presencia digital,
          desde diseño y desarrollo web hasta automatización inteligente y SEO.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="services-grid">
        <!-- Featured Service - Diseño y desarrollo web -->
        <article class="service-card featured" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-purple">
              <WebProgrammer />
            </div>
            <h2>Diseño y Desarrollo Web</h2>
            <p>
              Páginas modernas, rápidas y seguras que transmiten tu esencia y
              funcionan como tu mejor carta de presentación digital.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">01</div>
        </article>

        <!-- E-commerce -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-pink">
              <Ecommerce />
            </div>
            <h2>E-commerce</h2>
            <p>
              Tiendas online optimizadas para vender más, con una experiencia de
              compra fluida y segura.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">02</div>
        </article>

        <!-- Agendamiento y Pago -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-cyan">
              <Pago />
            </div>
            <h2>Agendamiento y Pago</h2>
            <p>
              Sistemas integrados para que tus clientes reserven citas y realicen
              pagos online con confianza.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">03</div>
        </article>

        <!-- SEO -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-green">
              <Seo />
            </div>
            <h2>SEO</h2>
            <p>
              Optimización para aparecer en Google y atraer clientes de manera
              orgánica y constante.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">04</div>
        </article>

        <!-- Mantenimiento Web -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-blue">
              <MttoWeb />
            </div>
            <h2>Mantenimiento Web</h2>
            <p>
              Actualización, seguridad y soporte continuo para que tu web funcione
              siempre al máximo.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">05</div>
        </article>

        <!-- Branding y diseño visual -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-orange">
              <Branding />
            </div>
            <h2>Branding y Diseño Visual</h2>
            <p>
              Paleta de colores, tipografías y elementos visuales para dar
              coherencia y personalidad a tu marca.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">06</div>
        </article>

        <!-- Featured Service - Optimización de velocidad -->
        <article class="service-card featured" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-yellow">
              <Time />
            </div>
            <h2>Optimización de Velocidad</h2>
            <p>
              Mejora de tiempos de carga y rendimiento para ofrecer la mejor
              experiencia y escalar en SEO.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">07</div>
        </article>

        <!-- Analítica y reportes -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-indigo">
              <Analisis />
            </div>
            <h2>Analítica Web y Reportes</h2>
            <p>
              Datos claros y métricas accionables para entender a tu audiencia y
              tomar mejores decisiones.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">08</div>
        </article>

        <!-- Automatización Inteligente -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-teal">
              <Automation />
            </div>
            <h2>Automatización Inteligente</h2>
            <p>
              Workflows con n8n y Zapier que automatizan tareas repetitivas,
              ahorran tiempo y escalan tu negocio sin contratar más personal.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">09</div>
        </article>

        <!-- AI y Asistentes Virtuales -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-violet">
              <AiBrain />
            </div>
            <h2>AI y Asistentes Virtuales</h2>
            <p>
              Chatbots inteligentes con Model Context Protocol (MCP) que
              atienden clientes 24/7, responden preguntas y ejecutan acciones.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">10</div>
        </article>

        <!-- Accesibilidad Web AI -->
        <article class="service-card" tabindex="0">
          <div class="card-gradient"></div>
          <div class="card-content">
            <div class="icon-wrapper gradient-emerald">
              <Accessibility />
            </div>
            <h2>Accesibilidad Web AI</h2>
            <p>
              Cumplimiento WCAG 2.1 automatizado con IA. Expande tu mercado,
              evita demandas y mejora el SEO. EAA obligatorio en junio 2025.
            </p>
          </div>
          <div class="card-number" aria-hidden="true">11</div>
        </article>
      </div>

      <!-- CTA Section -->
      <div class="services-cta">
        <div class="cta-content-services">
          <h2>¿Tu negocio necesita alguno de estos servicios?</h2>
          <p>Conversemos sobre cómo puedo ayudarte a alcanzar tus objetivos</p>
          <a
            href="https://calendar.app.google/7zL3cZ713aYB9tCW6"
            class="cta-button-services"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Agendar llamada estratégica - Abre en nueva ventana"
          >
            <span>Agendar llamada estratégica</span>
            <svg
              width="22"
              height="22"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
            >
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Variables */
  :root {
    --service-purple: #a855f7;
    --service-pink: #ec4899;
    --service-cyan: #06b6d4;
    --service-green: #22c55e;
    --service-blue: #3b82f6;
    --service-orange: #f97316;
    --service-yellow: #fbbf24;
    --service-indigo: #6366f1;
    --service-teal: #14b8a6;
    --service-violet: #8b5cf6;
    --service-emerald: #10b981;
  }

  /* Main Section */
  .services-page {
    position: relative;
    overflow: hidden;
    min-height: 100vh;
    padding: 12rem 0 6rem;
    background: light-dark(
      linear-gradient(to bottom, #faf5ff, #eff6ff),
      linear-gradient(to bottom, #0f172a, #1e1b4b)
    );
  }

  /* Background Elements */
  .services-background {
    pointer-events: none;
    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;
    overflow: hidden;
    width: 100%;
    height: 100%;
  }

  /* Floating Blobs */
  .floating-blob {
    position: absolute;
    width: 40rem;
    height: 40rem;
    border-radius: 50%;
    opacity: 0.3;
    filter: blur(100px);
    animation: blobFloat 20s ease-in-out infinite;
  }

  .blob-1 {
    top: 10%;
    left: -10%;
    background: linear-gradient(135deg, var(--service-purple), var(--service-pink));
    animation-delay: 0s;
  }

  .blob-2 {
    top: 50%;
    right: -10%;
    background: linear-gradient(135deg, var(--service-cyan), var(--service-blue));
    animation-delay: 7s;
  }

  .blob-3 {
    bottom: 10%;
    left: 30%;
    background: linear-gradient(135deg, var(--service-green), var(--service-yellow));
    animation-delay: 14s;
  }

  /* Gradient Orbs */
  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    opacity: 0.2;
    filter: blur(80px);
    animation: orbPulse 16s ease-in-out infinite;
  }

  .orb-1 {
    top: 20%;
    right: 15%;
    width: 25rem;
    height: 25rem;
    background: radial-gradient(circle, #06b6d4, transparent);
  }

  .orb-2 {
    bottom: 15%;
    left: 10%;
    width: 30rem;
    height: 30rem;
    background: radial-gradient(circle, #a855f7, transparent);
  }

  /* Container */
  .services-container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .services-hero {
    text-align: center;
    margin-bottom: 5rem;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-badge {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 1.5rem;
    padding: 0.6rem 1.2rem;
    border: 1px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 30%));
    border-radius: 2rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: light-dark(#7c3aed, #e9d5ff);
    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 20%));
    animation: badgeGlow 3s ease-in-out infinite;
  }

  .badge-icon {
    width: 1rem;
    height: 1rem;
  }

  .page-title {
    margin-bottom: 1.5rem;
    font-family: Poppins, sans-serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    color: light-dark(#0f172a, #fff);
  }

  .page-title__span {
    background: linear-gradient(135deg, #a855f7, #06b6d4, #ec4899);
    background-clip: text;
    background-size: 200% 200%;
    animation: gradientShift 8s ease infinite;
    -webkit-text-fill-color: transparent;
  }

  .page-subtitle {
    max-width: 850px;
    margin: 0 auto;
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.7;
    color: light-dark(#64748b, #94a3b8);
  }

  /* Services Grid - Bento Box Style */
  .services-grid {
    position: relative;
    z-index: 10;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    max-width: 1400px;
    margin: 0 auto 4rem;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.2s;
  }

  /* Service Card */
  .service-card {
    cursor: pointer;
    position: relative;
    overflow: hidden;
    padding: 2.5rem;
    border: 2px solid light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 20%));
    border-radius: 2rem;
    background: light-dark(rgb(255 255 255 / 80%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(10px);
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    opacity: 0;
    animation: fadeInScale 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .service-card:focus {
    outline: 3px solid light-dark(var(--service-purple), var(--service-pink));
    outline-offset: 4px;
  }

  .service-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: light-dark(rgb(168 85 247 / 40%), rgb(168 85 247 / 60%));
    box-shadow: light-dark(
      0 25px 50px -12px rgb(168 85 247 / 25%),
      0 25px 50px -12px rgb(168 85 247 / 40%)
    );
  }

  .service-card:hover .card-gradient {
    opacity: 1;
  }

  .service-card:hover .icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }

  .service-card:hover .card-number {
    transform: scale(1.1) rotate(-5deg);
    opacity: 0.15;
  }

  /* Stagger animation delays for cards */
  .service-card:nth-child(1) {
    animation-delay: 0s;
  }
  .service-card:nth-child(2) {
    animation-delay: 0.1s;
  }
  .service-card:nth-child(3) {
    animation-delay: 0.2s;
  }
  .service-card:nth-child(4) {
    animation-delay: 0.3s;
  }
  .service-card:nth-child(5) {
    animation-delay: 0.4s;
  }
  .service-card:nth-child(6) {
    animation-delay: 0.5s;
  }
  .service-card:nth-child(7) {
    animation-delay: 0.6s;
  }
  .service-card:nth-child(8) {
    animation-delay: 0.7s;
  }
  .service-card:nth-child(9) {
    animation-delay: 0.8s;
  }
  .service-card:nth-child(10) {
    animation-delay: 0.9s;
  }
  .service-card:nth-child(11) {
    animation-delay: 1s;
  }

  /* Card Gradient Background */
  .card-gradient {
    position: absolute;
    inset: 0;
    opacity: 0;
    background: radial-gradient(
      circle at top right,
      light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 20%)),
      transparent
    );
    transition: opacity 0.5s ease;
  }

  /* Card Content */
  .card-content {
    position: relative;
    z-index: 2;
  }

  /* Icon Wrapper */
  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 5rem;
    height: 5rem;
    margin-bottom: 1.5rem;
    border-radius: 1.5rem;
    transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .icon-wrapper :global(svg) {
    width: 3rem;
    height: 3rem;
    color: white;
  }

  /* Gradient Backgrounds for Icons */
  .gradient-purple {
    background: linear-gradient(135deg, var(--service-purple), #7c3aed);
  }
  .gradient-pink {
    background: linear-gradient(135deg, var(--service-pink), #db2777);
  }
  .gradient-cyan {
    background: linear-gradient(135deg, var(--service-cyan), #0891b2);
  }
  .gradient-green {
    background: linear-gradient(135deg, var(--service-green), #16a34a);
  }
  .gradient-blue {
    background: linear-gradient(135deg, var(--service-blue), #2563eb);
  }
  .gradient-orange {
    background: linear-gradient(135deg, var(--service-orange), #ea580c);
  }
  .gradient-yellow {
    background: linear-gradient(135deg, var(--service-yellow), #f59e0b);
  }
  .gradient-indigo {
    background: linear-gradient(135deg, var(--service-indigo), #4f46e5);
  }
  .gradient-teal {
    background: linear-gradient(135deg, var(--service-teal), #0d9488);
  }
  .gradient-violet {
    background: linear-gradient(135deg, var(--service-violet), #7c3aed);
  }
  .gradient-emerald {
    background: linear-gradient(135deg, var(--service-emerald), #059669);
  }

  /* Typography */
  .service-card h2 {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: bold;
    color: light-dark(#0f172a, #fff);
    overflow-wrap: normal;
  }

  .service-card p {
    margin-bottom: 0;
    font-size: 1rem;
    line-height: 1.6;
    color: light-dark(#475569, #cbd5e1);
  }

  /* Card Number */
  .card-number {
    pointer-events: none;
    position: absolute;
    right: 1rem;
    bottom: -1rem;
    font-size: 8rem;
    font-weight: bold;
    line-height: 1;
    color: light-dark(#0f172a, #fff);
    opacity: 0.05;
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* CTA Section */
  .services-cta {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.4s;
  }

  .cta-content-services {
    padding: 3rem 2rem;
    border: 2px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 40%));
    border-radius: 2rem;
    background: light-dark(
      linear-gradient(135deg, rgb(255 255 255 / 80%), rgb(248 250 252 / 80%)),
      linear-gradient(135deg, rgb(30 27 75 / 60%), rgb(15 23 42 / 60%))
    );
    backdrop-filter: blur(20px);
    box-shadow: 0 20px 40px -12px rgb(0 0 0 / 15%);
  }

  .cta-content-services h2 {
    margin-bottom: 1rem;
    font-size: 2rem;
    font-weight: 800;
    color: light-dark(#0f172a, #fff);
  }

  .cta-content-services p {
    margin-bottom: 2rem;
    font-size: 1.125rem;
    color: light-dark(#64748b, #cbd5e1);
  }

  .cta-button-services {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.125rem 2.5rem;
    border: 2px solid transparent;
    border-radius: 9999px;
    background: linear-gradient(135deg, #a855f7, #06b6d4);
    color: white;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    box-shadow: 0 20px 40px rgb(168 85 247 / 30%);
    transition: all 0.3s ease;
  }

  .cta-button-services:hover {
    transform: translateY(-3px);
    box-shadow: 0 25px 50px rgb(168 85 247 / 40%);
  }

  .cta-button-services svg {
    transition: transform 0.3s ease;
  }

  .cta-button-services:hover svg {
    transform: translateX(5px);
  }

  /* Responsive */
  @media (width >= 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (width >= 1024px) {
    .services-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
    }

    /* Bento box layout for larger screens */
    .service-card.featured {
      grid-column: span 2;
    }
  }

  @media (width <= 767px) {
    .services-page {
      padding: 6rem 0 4rem;
    }

    .services-hero {
      margin-bottom: 3rem;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .service-card {
      padding: 2rem;
    }

    .card-number {
      font-size: 6rem;
    }

    .cta-content-services {
      padding: 2rem 1.5rem;
    }

    .cta-content-services h2 {
      font-size: 1.5rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
    }
  }

  /* Animations */
  @keyframes blobFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(-30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(40px, 30px) scale(0.9);
    }
  }

  @keyframes orbPulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.2;
    }
    50% {
      transform: scale(1.15);
      opacity: 0.3;
    }
  }

  @keyframes badgeGlow {
    0%,
    100% {
      box-shadow: 0 0 20px rgb(168 85 247 / 20%);
    }
    50% {
      box-shadow: 0 0 30px rgb(168 85 247 / 40%);
    }
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes fadeInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fadeInScale {
    from {
      transform: scale(0.95);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>

<script>
  // Enhanced keyboard navigation
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".service-card");

    cards.forEach((card, index) => {
      card.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " ") {
          e.preventDefault();
          const link = card.querySelector(".service-link");
          if (link) link.click();
        }

        // Arrow key navigation
        if (e.key === "ArrowRight" && cards[index + 1]) {
          cards[index + 1].focus();
        }
        if (e.key === "ArrowLeft" && cards[index - 1]) {
          cards[index - 1].focus();
        }
      });
    });

    // Intersection Observer for scroll animations
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.style.animationPlayState = "running";
          }
        });
      },
      { threshold: 0.1 },
    );

    cards.forEach((card) => {
      card.style.animationPlayState = "paused";
      observer.observe(card);
    });
  });
</script>
