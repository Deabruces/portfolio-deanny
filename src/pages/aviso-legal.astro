<style>
  /* ============================================
   Legal Page Styles - Accessible & Responsive
   ============================================ */

  /* Main Section */
  .legal-page {
    position: relative;

    overflow: hidden;

    min-height: 100vh;
    padding: 12rem 0 6rem;

    background: light-dark(
      linear-gradient(to bottom, #fafafa, #f5f5f5),
      linear-gradient(to bottom, #1a1a2e, #16213e)
    );
  }

  /* Background Elements */
  .legal-background {
    pointer-events: none;

    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;

    overflow: hidden;

    width: 100%;
    height: 100%;
  }

  /* Floating Blobs */
  .floating-blob {
    position: absolute;

    width: 35rem;
    height: 35rem;
    border-radius: 50%;

    opacity: 0.08;
    filter: blur(100px);

    animation: blobFloat 20s ease-in-out infinite;
  }

  .blob-1 {
    top: -10%;
    left: -10%;
    background: linear-gradient(135deg, #a855f7, #ec4899);
    animation-delay: 0s;
  }

  .blob-2 {
    right: -10%;
    bottom: -10%;
    background: linear-gradient(135deg, #06b6d4, #8b5cf6);
    animation-delay: 10s;
  }

  /* Container */
  .legal-container {
    position: relative;
    z-index: 1;

    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .legal-hero {
    margin-bottom: 4rem;
    text-align: center;
  }

  .page-title {
    margin-bottom: 1rem;

    font-family: Poppins, sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: light-dark(#1e1b4b, #f8fafc);
  }

  .page-subtitle {
    font-size: 1rem;
    color: light-dark(#64748b, #cbd5e1);
  }

  /* Content */
  .legal-content {
    padding: 3rem;
    border: 1px solid light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 20%));
    border-radius: 1.5rem;

    background: light-dark(rgb(255 255 255 / 90%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(10px);
    box-shadow:
      0 10px 40px light-dark(rgb(0 0 0 / 5%), rgb(0 0 0 / 20%)),
      0 0 0 1px light-dark(rgb(255 255 255 / 60%), rgb(255 255 255 / 5%)) inset;
  }

  /* Sections */
  .legal-section {
    margin-bottom: 3rem;
  }

  .legal-section:last-of-type {
    margin-bottom: 2rem;
  }

  .legal-section h2 {
    margin-bottom: 1.5rem;

    font-family: Poppins, sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: light-dark(#8b5cf6, #a78bfa);
  }

  .legal-section p {
    margin-bottom: 1rem;
    font-size: 1.05rem;
    line-height: 1.8;
    color: light-dark(#374151, #e5e7eb);
  }

  .legal-section ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .legal-section li {
    margin-bottom: 0.75rem;
    font-size: 1.05rem;
    line-height: 1.8;
    color: light-dark(#374151, #e5e7eb);
  }

  .legal-section a {
    color: light-dark(#8b5cf6, #a78bfa);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .legal-section a:hover {
    color: light-dark(#7c3aed, #c4b5fd);
  }

  .legal-section strong {
    font-weight: 700;
    color: light-dark(#1e1b4b, #f8fafc);
  }

  /* Footer */
  .legal-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid
      light-dark(rgb(168 85 247 / 15%), rgb(168 85 247 / 25%));
    text-align: center;
  }

  .legal-footer p {
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    color: light-dark(#64748b, #cbd5e1);
  }

  .btn-back {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    padding: 0.875rem 2rem;
    border: 2px solid var(--deanny-cian);
    border-radius: 2rem;

    font-size: 1rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;

    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow: 0 8px 25px rgb(168 85 247 / 25%);

    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-back:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgb(168 85 247 / 35%);
  }

  .btn-back:focus-visible {
    outline: 3px solid light-dark(#a855f7, #a78bfa);
    outline-offset: 4px;
  }

  /* Responsive */
  @media (width <= 767px) {
    .legal-page {
      padding: 8rem 0 4rem;
    }

    .legal-hero {
      margin-bottom: 2.5rem;
    }

    .legal-content {
      padding: 2rem 1.5rem;
    }

    .legal-section h2 {
      font-size: 1.5rem;
    }

    .legal-section p,
    .legal-section li {
      font-size: 1rem;
    }

    .legal-section ul {
      padding-left: 1.5rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
    }
  }

  /* Animations */
  @keyframes blobFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }

    33% {
      transform: translate(-25px, -40px) scale(1.08);
    }

    66% {
      transform: translate(30px, 25px) scale(0.92);
    }
  }
</style>
