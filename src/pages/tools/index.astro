---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
const tools = await getCollection("tools");
---

<Layout
  title="Herramientas"
  description="Un kit gratuito para emprendedores y programadores: herramientas simples, prácticas y poderosas que te ayudan a crecer online."
>
  <section class="tools-page content-grid">
    <!-- Background Elements -->
    <div class="tools-background full-width" aria-hidden="true">
      <div class="floating-blob blob-1"></div>
      <div class="floating-blob blob-2"></div>
      <div class="floating-blob blob-3"></div>
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
    </div>

    <div class="tools-container">
      <!-- Hero Section -->
      <div class="tools-hero">
        <div class="hero-badge">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
          >
            <path
              d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"
            ></path>
          </svg>
          <span>Herramientas</span>
        </div>

        <h1 class="page-title">
          Herramientas <span class="page-title__span">Para Tí</span>
        </h1>
        <p class="page-subtitle">
          Un kit gratuito para emprendedores y programadores: herramientas
          simples, prácticas y poderosas que te ayudan a crecer online.
        </p>
      </div>

      <div id="init-floating"></div>
      <!-- Tools Grid -->
      <div class="tool-list">
        {
          tools.map((tool, index) => (
            <a
              href={`/tools/${tool.id}`}
              class="tool-card"
              style={`animation-delay: ${index * 0.1}s`}
              aria-label={`Ver herramienta: ${tool.data.title}`}
            >
              <div class="card-gradient" />
              <div class="tool-image-wrapper">
                <Image
                  src={tool.data.image}
                  alt={tool.data.title}
                  width={800}
                  height={450}
                  loading="lazy"
                  class="tool-image"
                />
              </div>
              <div class="tool-content">
                <h2 class="tool-title">{tool.data.title}</h2>
                <p class="tool-description">{tool.data.description}</p>
                <span class="tool-link">
                  Probar ahora
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                  >
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                  </svg>
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ============================================
   Tools Page Styles - Modern Glassmorphic Design
   ============================================ */

  /* Main Section */
  .tools-page {
    position: relative;

    overflow: hidden;

    min-height: 100vh;
    padding: 12rem 0 6rem;

    background: light-dark(
      radial-gradient(circle at top right, #e0f2fe, #ddd6fe, #fce7f3),
      radial-gradient(circle at top right, #0c4a6e, #3730a3, #831843)
    );
  }

  /* Background Elements */
  .tools-background {
    pointer-events: none;

    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;

    overflow: hidden;

    width: 100%;
    height: 100%;
  }

  /* Floating Blobs */
  .floating-blob {
    position: absolute;

    width: 40rem;
    height: 40rem;
    border-radius: 50%;

    opacity: 0.14;
    filter: blur(115px);

    animation: blobFloat 22s ease-in-out infinite;
  }

  .blob-1 {
    top: -8%;
    left: -12%;
    background: linear-gradient(135deg, #a855f7, #ec4899);
    animation-delay: 0s;
  }

  .blob-2 {
    top: 45%;
    right: -10%;
    background: linear-gradient(135deg, #06b6d4, #8b5cf6);
    animation-delay: 7s;
  }

  .blob-3 {
    bottom: -15%;
    left: 35%;
    background: linear-gradient(135deg, #f43f5e, #a855f7);
    animation-delay: 14s;
  }

  /* Gradient Orbs */
  .gradient-orb {
    position: absolute;

    border-radius: 50%;

    opacity: 0.2;
    filter: blur(75px);

    animation: orbPulse 16s ease-in-out infinite;
  }

  .orb-1 {
    top: 15%;
    right: 15%;

    width: 22rem;
    height: 22rem;

    background: radial-gradient(circle, #06b6d4, transparent);
  }

  .orb-2 {
    bottom: 20%;
    left: 10%;

    width: 28rem;
    height: 28rem;

    background: radial-gradient(circle, #a855f7, transparent);
  }

  /* Container */
  .tools-container {
    position: relative;
    z-index: 1;

    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .tools-hero {
    margin-bottom: 5rem;
    text-align: center;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-badge {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    margin-bottom: 1.5rem;
    padding: 0.6rem 1.2rem;
    border: 1px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 30%));
    border-radius: 2rem;

    font-size: 0.9rem;
    font-weight: 600;
    color: light-dark(#8b5cf6, #a78bfa);

    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 15%));
    backdrop-filter: blur(10px);

    animation: badgeGlow 3s ease-in-out infinite;
  }

  .hero-badge svg {
    width: 18px;
    height: 18px;
    color: light-dark(#8b5cf6, #a78bfa);
  }

  .page-title {
    margin-bottom: 1.5rem;

    font-family: Poppins, sans-serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    color: light-dark(#1e1b4b, #f8fafc);
  }

  .page-title__span {
    background: linear-gradient(135deg, #a855f7, #06b6d4, #ec4899);
    background-clip: text;
    background-size: 200% 200%;

    animation: gradientShift 8s ease infinite;

    -webkit-text-fill-color: transparent;
  }

  .page-subtitle {
    max-width: 850px;
    margin: 0 auto;

    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.7;
    color: light-dark(#64748b, #cbd5e1);
  }

  /* Tools Grid */
  .tool-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem;

    opacity: 0;

    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.2s;
  }

  /* Tool Card */
  .tool-card {
    position: relative;

    overflow: hidden;
    display: flex;
    flex-direction: column;

    border: 2px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 35%));
    border-radius: 1.5rem;

    text-decoration: none;

    opacity: 0;
    background: light-dark(rgb(255 255 255 / 85%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(20px);
    box-shadow:
      0 10px 40px light-dark(rgb(168 85 247 / 10%), rgb(0 0 0 / 25%)),
      0 0 0 1px light-dark(rgb(255 255 255 / 60%), rgb(255 255 255 / 5%)) inset;

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    animation: fadeInScale 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .tool-card::before {
    content: "";

    position: absolute;
    top: -50%;
    right: -50%;

    width: 200%;
    height: 200%;

    opacity: 0;
    background: radial-gradient(
      circle,
      rgb(6 182 212 / 10%) 0%,
      transparent 70%
    );

    transition: opacity 0.4s ease;
  }

  .tool-card:hover::before {
    opacity: 1;
  }

  .tool-card:hover {
    transform: translateY(-12px) scale(1.02);
    border-color: light-dark(rgb(168 85 247 / 40%), rgb(168 85 247 / 60%));
    box-shadow:
      0 25px 60px light-dark(rgb(168 85 247 / 20%), rgb(0 0 0 / 40%)),
      0 0 0 1px light-dark(rgb(255 255 255 / 90%), rgb(255 255 255 / 10%)) inset;
  }

  .tool-card:hover .card-gradient {
    opacity: 1;
  }

  .tool-card:hover .tool-image {
    transform: scale(1.05);
  }

  .tool-card:hover .tool-link {
    border-color: transparent;
    color: #fff;
    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow: 0 6px 20px rgb(168 85 247 / 30%);
  }

  .tool-card:hover .tool-link svg {
    transform: translateX(3px);
  }

  /* Card Gradient Background */
  .card-gradient {
    position: absolute;
    inset: 0;

    opacity: 0;
    background: radial-gradient(
      circle at top right,
      light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 20%)),
      transparent
    );

    transition: opacity 0.5s ease;
  }

  /* Tool Image */
  .tool-image-wrapper {
    position: relative;

    overflow: hidden;

    aspect-ratio: 16 / 9;
    width: 100%;
    border-radius: 1rem 1rem 0 0;

    background: light-dark(#f1f5f9, #1e293b);
  }

  .tool-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Tool Content */
  .tool-content {
    position: relative;
    z-index: 1;

    display: flex;
    flex: 1;
    flex-direction: column;
    gap: 1rem;

    min-height: 0;
    padding: 1.75rem;
  }

  .tool-title {
    margin: 0;

    font-family: Poppins, sans-serif;
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: 700;
    line-height: 1.3;
    hyphens: auto;
    color: light-dark(#1e1b4b, #f8fafc);
    overflow-wrap: break-word;

    transition: color 0.3s ease;
  }

  .tool-card:hover .tool-title {
    color: light-dark(#8b5cf6, #a78bfa);
  }

  .tool-description {
    overflow: hidden;
    display: -webkit-box;
    flex: 1 1 auto;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;

    margin: 0;

    font-size: 0.95rem;
    line-height: 1.6;
    color: light-dark(#64748b, #cbd5e1);
    overflow-wrap: break-word;
  }

  /* Tool Link Button */
  .tool-link {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
    align-self: flex-start;

    padding: 0.75rem 1.25rem;
    border: 1px solid light-dark(rgb(168 85 247 / 25%), rgb(168 85 247 / 35%));
    border-radius: 2rem;

    font-size: 0.9rem;
    font-weight: 600;
    color: light-dark(#8b5cf6, #a78bfa);
    white-space: nowrap;

    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 15%));

    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .tool-link svg {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  /* Focus Styles */
  .tool-card:focus-visible {
    outline: 3px solid light-dark(#a855f7, #a78bfa);
    outline-offset: 4px;
  }

  /* Responsive */
  @media (width >= 768px) {
    .tool-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (width >= 1200px) {
    .tool-list {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }

  @media (width <= 767px) {
    .tools-page {
      padding: 6rem 0 4rem;
    }

    .tools-hero {
      margin-bottom: 3rem;
    }

    .tool-list {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .tool-content {
      gap: 0.875rem;
      padding: 1.5rem;
    }

    .tool-title {
      font-size: 1.25rem;
    }

    .tool-description {
      font-size: 0.9rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
    }
  }

  /* Animations */
  @keyframes blobFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }

    33% {
      transform: translate(-32px, -48px) scale(1.1);
    }

    66% {
      transform: translate(42px, 32px) scale(0.9);
    }
  }

  @keyframes orbPulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.2;
    }

    50% {
      transform: scale(1.15);
      opacity: 0.3;
    }
  }

  @keyframes badgeGlow {
    0%,
    100% {
      box-shadow: 0 0 20px rgb(168 85 247 / 20%);
    }

    50% {
      box-shadow: 0 0 30px rgb(168 85 247 / 40%);
    }
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes fadeInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fadeInScale {
    from {
      transform: scale(0.95);
      opacity: 0;
    }

    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
