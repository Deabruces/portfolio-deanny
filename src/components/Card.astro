---
import Icon from "./Icon.astro";
import { Image } from "astro:assets";

interface Props {
  link: string;
  title: string;
  image: ImageMetadata;
  summary: string;
  tags: string[];
  date?: string;
  identifier?: string;
}
const { title, image, tags, link, identifier } = Astro.props;
const ImgAnimationName = "image--" + identifier;
const TitleAnimationName = "title--" + identifier;
---

<a
  href={link}
  class="project-card"
  aria-label={`Ver detalles del proyecto ${title}`}
>
  <article class="card-inner">
    <!-- Image Container with Overlay -->
    <div class="image-container">
      <Image class="card-image" src={image} alt={`Proyecto ${title}`} />
      <div class="image-overlay" aria-hidden="true"></div>
      <div class="gradient-border" aria-hidden="true"></div>
    </div>

    <!-- Content -->
    <div class="card-content">
      <!-- Tags -->
      <div class="tags-container" role="list">
        {
          tags.map((tag) => (
            <div class="tech-tag" role="listitem">
              <div class="tech-icon">
                <Icon name={tag} />
              </div>
            </div>
          ))
        }
      </div>

      <!-- Title with Gradient -->
      <h3 class="card-title">{title}</h3>

      <!-- View Project Button -->
      <div class="cta-wrapper">
        <span class="view-text">Ver proyecto</span>
        <svg
          class="arrow-icon"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </div>
    </div>

    <!-- Hover Glow Effect -->
    <div class="hover-glow" aria-hidden="true"></div>
  </article>
</a>

<style
  define:vars={{
    "img-animation-name": ImgAnimationName,
    "title-animation-name": TitleAnimationName,
  }}
>
  /* Card Link Wrapper */
  .project-card {
    display: block;
    height: 100%;
    color: inherit;
    text-decoration: none;
  }

  /* Card Container */
  .card-inner {
    position: relative;

    overflow: hidden;
    display: flex;
    flex-direction: column;

    height: 100%;
    border: 2px solid light-dark(rgb(168 85 247 / 15%), rgb(168 85 247 / 30%));
    border-radius: 2rem;

    background: light-dark(rgb(255 255 255 / 90%), rgb(30 27 75 / 60%));
    backdrop-filter: blur(10px);

    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .project-card:hover .card-inner {
    border-color: light-dark(rgb(168 85 247 / 50%), rgb(255 102 200 / 60%));
    background: light-dark(rgb(255 255 255 / 100%), rgb(30 27 75 / 80%));
  }

  .project-card:focus {
    border-radius: 2rem;
    outline: 3px solid light-dark(#a855f7, #ff66c8);
    outline-offset: 4px;
  }

  /* Image Container */
  .image-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 280px;
  }

  .card-image {
    width: 100%;
    height: 100%;

    object-fit: cover;
    object-position: center;

    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    view-transition-name: var(--img-animation-name);
  }

  .project-card:hover .card-image {
    transform: scale(1.08);
  }

  /* Image Overlay */
  .image-overlay {
    position: absolute;
    inset: 0;

    opacity: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      transparent 40%,
      rgb(0 0 0 / 10%) 100%
    );

    transition: opacity 0.5s ease;
  }

  .project-card:hover .image-overlay {
    opacity: 1;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgb(168 85 247 / 20%) 70%,
      rgb(255 102 200 / 40%) 100%
    );
  }

  /* Gradient Border Effect */
  .gradient-border {
    pointer-events: none;

    position: absolute;
    z-index: -1;
    inset: -2px;

    border-radius: 2rem 2rem 0 0;

    opacity: 0;
    background: linear-gradient(
      135deg,
      rgb(168 85 247 / 60%),
      rgb(255 102 200 / 60%)
    );
    filter: blur(8px);

    transition: opacity 0.5s ease;
  }

  .project-card:hover .gradient-border {
    opacity: 1;
  }

  /* Card Content */
  .card-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    gap: 1rem;

    padding: 1.5rem;
  }

  /* Tags Container */
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    display: inline-flex;
    align-items: center;
    justify-content: center;

    min-width: 2.5rem;
    min-height: 2.5rem;
    padding: 0.5rem;
    border: 2px solid light-dark(rgb(168 85 247 / 50%), rgb(168 85 247 / 60%));
    border-radius: 0.75rem;

    background: light-dark(#fff, rgb(30 27 75 / 80%));
    box-shadow: 0 2px 8px light-dark(rgb(168 85 247 / 15%), rgb(0 0 0 / 30%));

    transition: all 0.3s ease;
  }

  .tech-tag:hover {
    transform: translateY(-2px);
    border-color: light-dark(rgb(168 85 247 / 80%), rgb(255 102 200 / 80%));
    background: light-dark(#fff, rgb(30 27 75 / 90%));
    box-shadow: 0 6px 16px
      light-dark(rgb(168 85 247 / 30%), rgb(168 85 247 / 50%));
  }

  .tech-icon {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 1.25rem;
    height: 1.25rem;

    color: var(--deanny-lila);
  }

  .tech-tag :global(svg) {
    display: block;
    width: 100%;
    height: 100%;
  }

  .tech-icon :global(svg),
  .tech-icon :global(svg *) {
    transition: none !important;
  }

  /* Card Title */
  .card-title {
    flex-grow: 1;

    margin: 0;

    font-size: 1.5rem;
    font-weight: 800;
    line-height: 1.3;
    color: light-dark(#0f172a, #fff);

    transition: color 0.3s ease;
    view-transition-name: var(--title-animation-name);
  }

  .project-card:hover .card-title {
    background: linear-gradient(135deg, #a855f7, #ff66c8);
    background-clip: text;

    -webkit-text-fill-color: transparent;
  }

  /* CTA Wrapper */
  .cta-wrapper {
    display: flex;
    gap: 0.5rem;
    align-items: center;

    width: fit-content;
    padding: 0.875rem 1.5rem;
    border-radius: 9999px;

    font-size: 0.9375rem;
    font-weight: 700;
    color: white;

    background: linear-gradient(135deg, #a855f7, #ff66c8);
    box-shadow: 0 4px 12px rgb(168 85 247 / 30%);

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .project-card:hover .cta-wrapper {
    transform: translateX(8px);
    box-shadow: 0 8px 24px rgb(168 85 247 / 50%);
  }

  .view-text {
    font-size: 0.9375rem;
  }

  .arrow-icon {
    transition: transform 0.3s ease;
  }

  .project-card:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* Hover Glow */
  .hover-glow {
    pointer-events: none;

    position: absolute;
    z-index: -1;
    inset: -20px;

    border-radius: 2.5rem;

    opacity: 0;
    background: radial-gradient(
      circle at center,
      rgb(168 85 247 / 30%),
      transparent 70%
    );
    filter: blur(30px);

    transition: opacity 0.5s ease;
  }

  .project-card:hover .hover-glow {
    opacity: 1;
  }

  /* Responsive */
  @media (width <= 640px) {
    .image-container {
      height: 200px;
    }

    .card-content {
      padding: 1.25rem;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .tags-container {
      gap: 0.375rem;
    }

    .tech-tag {
      min-width: 2rem;
      min-height: 2rem;
      padding: 0.375rem;
    }

    .tech-icon {
      width: 1rem;
      height: 1rem;
    }

    .tech-tag :global(svg) {
      width: 100%;
      height: 100%;
    }
  }
</style>
