---
import Icon from "./Icon.astro";
import ExternalLink from "../assets/icons/external-link.svg";
import { Image } from "astro:assets";

interface Props {
  link: string;
  title: string;
  image: ImageMetadata;
  summary: string;
  tags: string[];
  date?: string;
  identifier?: string;
}
const { title, image, summary, tags, link, identifier } = Astro.props;
const ImgAnimationName = "image--" + identifier;
const TitleAnimationName = "title--" + identifier;
---

<article class="card">
  <header class="card__header">
    <figure class="card__figure">
      <Image class="card__img" src={image} alt={title} />
    </figure>
    <h2 class="header__title">{title}</h2>
  </header>
  <div class="card__content">
    <p class="content__text">
      {summary}
    </p>
  </div>
  <footer class="card__footer">
    <div class="card__icons">
      {
        tags.map((tag) => {
          return <Icon name={tag} />;
        })
      }
    </div>
    <div class="footer__link">
      <a href={link} class="footer__links-external">
        <span class="footer__link-external">
          <span class="text-view-project">Ver proyecto</span>
          <span class="icono-view-project"><ExternalLink /></span>
        </span>
      </a>
    </div>
  </footer>
</article>

<style define:vars={{ ImgAnimationName, TitleAnimationName }}>
  .card {
    max-width: 388px;
    background-color: var(--background-color);
    border: 1px solid var(--acento-btn);
    border-radius: 20px;
    box-shadow: 0 4px 8px rgba(87, 87, 87, 0.1);
    display: flex;
    flex-direction: column;
    transition: scale 0.2s ease-in-out;
  }

  .card:hover {
    scale: 1.02;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    border-color: var(--acento-btn);
  }

  .card__header {
    color: var(--text-color);
  }
  .header__title {
    font-size: clamp(1.25rem, 1.375vw, 1.5rem);
    font-weight: 600;
    margin-top: 5px;
    padding: 15px 32px 5px 32px;
    color: var(--acento-btn);
    line-height: 1.2;
    view-transition-name: var(--TitleAnimationName);
  }

  .card__img {
    width: 100%;
    height: auto;
    border-radius: 20px 20px 0px 0px;
    aspect-ratio: 16/10;
    height: auto;
    view-transition-name: var(--ImgAnimationName);
  }
  .card__content {
    color: var(--text-color);
    padding: 5px 32px 15px 32px;
    flex-grow: 1;
  }
  .content__text {
    font-size: clamp(0.875rem, 0.9375vw, 1rem);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: var(--text-color);
    font-weight: 400;
    line-height: 1.3;
  }

  .card__icons {
    color: var(--secondary-color);
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: start;
    align-items: center;
    gap: 5px;
    padding: 10px 0px;
  }
  .card__icons :global(svg) {
    width: 24px;
    height: 24px;
  }

  .footer__link-external {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: end;
    gap: 5px;
    text-decoration: none;
    flex-shrink: 2;
  }
  .text-view-project {
    font-size: 0.8rem;
    line-height: 1.2;
    font-weight: 600;
  }

  .icono-view-project {
    width: 24px;
    height: 24px;
    transition: color 0.3s ease;
  }
  .icono-view-project:hover {
    color: var(--acento-btn-hover);
  }
  .footer__link {
    min-width: 56%;
    background-color: var(--acento-btn);
    color: var(--text-color);
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    transition:
      color 0.3s ease,
      background-color 0.3s ease;
  }
  .footer__link:hover {
    background-color: var(--acento-btn-hover);
    color: var(--text-color);
  }

  .card__footer {
    min-height: 77px;
    color: var(--text-color);
    font-weight: 400;
    padding: 2px 20px;
    text-align: end;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-radius: 0px 0px 20px 20px;
    background-color: var(--primary-color);
  }

  .footer__link-external {
    text-decoration: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: end;
    gap: 5px;
    font-size: 18px;
  }

  .footer__link {
    min-width: 44%;
    background-color: var(--acento-btn);
    padding: 5px 5px;
    border-radius: 30px;
    transition:
      color 0.3s ease,
      background-color 0.3s ease;
  }

  .footer__link:hover {
    background-color: var(--acento-btn-hover);
    color: var(--text-color);
  }

  .footer__links-external {
    text-decoration: none;
    color: var(--text-color);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 5px;
    font-size: 2rem;
  }
</style>
