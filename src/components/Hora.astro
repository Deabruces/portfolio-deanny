<time class="time"></time>

<style>
  .time {
    font-size: 20px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
</style>

<script is:inline>
  function mostrarHora() {
    const today = new Date();
    let hours = today.getHours();
    let minutes = today.getMinutes();
    let seconds = today.getSeconds();

    // Asegurarse de que los valores de horas, minutos y segundos tengan dos d√≠gitos
    hours = hours < 10 ? "0" + hours : hours;
    minutes = minutes < 10 ? "0" + minutes : minutes;
    seconds = seconds < 10 ? "0" + seconds : seconds;

    // Formatear la hora como HH:MM:SS
    // y actualizar el contenido del elemento con la clase 'time'
    return `${hours}:${minutes}:${seconds}`;
  }

  setInterval(() => {
    let horaActual = mostrarHora();
    document.querySelector(".time").textContent = horaActual;
  }, 1000);
</script>
