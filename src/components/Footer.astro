---
import Love from "../assets/icons/love.svg";
import SocialIcons from "./SocialIcons.astro";
---

<div class="footer">
  <p class="text">
    &copy; 2025 | Hecho con <span><Love /></span> por Deanny Bruces
  </p>

  <div class="social-icons">
    <SocialIcons />
  </div>
</div>

<style>
  .footer {
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    justify-content: space-between;

    height: auto;
    margin-top: 100px;
    padding: 10px 20px;
    border-top: 1px solid #1806283b;

    font-size: 1.2rem;
    font-weight: 500;

    background-color: var(--section-dark);
    backdrop-filter: blur(10px);
  }

  .text {
    display: flex;
    flex-direction: row;
    gap: 5px;
    align-items: center;
    justify-content: center;

    margin: 0;
    padding: 10px 0;

    font-size: clamp(0.8rem, 1.8vw, 1rem);
    color: var(--acento-btn);
  }

  .text svg {
    width: clamp(16px, 2vw, 20px);
    height: clamp(16px, 2vw, 20px);
    vertical-align: middle;
  }

  span {
    display: inline-flex;
    align-items: center;
    margin: 5px;
  }

  .social-icons {
    display: flex;
    flex-direction: row;
    gap: 10px;
    align-items: center;
    justify-content: center;
  }

  @media (width >= 768px) {
    .footer {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }
</style>
