    border: 2px solid light-dark(rgb(20 184 166 / 30%), rgb(20 184 166 / 40%));
    border-radius: 9999px;

    font-size: 1rem;
    font-weight: 700;
    color: light-dark(#0d9488, #5eead4);

    background: light-dark(rgb(20 184 166 / 10%), rgb(20 184 166 / 20%));

    animation: fadeInDown 0.6s ease-out;
  }

  .header-badge :global(svg) {
    width: 1.5rem;
    height: 1.5rem;
  }

  .showcase-title {
    margin-bottom: 1.5rem;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    line-height: 1.1;
    color: light-dark(#0f172a, #fff);
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  .gradient-text {
    background: linear-gradient(135deg, #14b8a6, #06b6d4, #8b5cf6);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .showcase-subtitle {
    max-width: 800px;
    margin: 0 auto;

    font-size: 1.25rem;
    line-height: 1.6;
    color: light-dark(#64748b, #94a3b8);

    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  /* Stats Bar */
  .stats-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    align-items: center;
    justify-content: center;

    margin-bottom: 5rem;
    padding: 2rem;
    border-radius: 1.5rem;

    background: light-dark(
      rgb(255 255 255 / 80%),
      rgb(30 41 59 / 50%)
    );
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 30px light-dark(rgb(0 0 0 / 5%), rgb(0 0 0 / 20%));

    animation: fadeInScale 0.6s ease-out 0.3s both;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: light-dark(#14b8a6, #5eead4);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: light-dark(#64748b, #94a3b8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 3rem;
    background: light-dark(#e2e8f0, #334155);
  }

  /* Workflows Grid */
  .workflows-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 5rem;
  }

  /* Workflow Card */
  .workflow-card {
    position: relative;

    padding: 2rem;
    border: 2px solid light-dark(#e2e8f0, #334155);
    border-radius: 1.5rem;

    background: light-dark(
