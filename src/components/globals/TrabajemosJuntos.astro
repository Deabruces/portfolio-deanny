---
import Send from "@icons/send.svg";
---

<div class="btn-header">
  <a href="/contacto">
    <Send />
    Trabajemos juntas/os
  </a>
</div>
<style>
  .btn-header a {
    display: flex;
    gap: 0.5rem;
    color: #fff;
  }

  .btn-header {
    position: relative;

    overflow: hidden;
    display: inline-flex;
    gap: 0.75rem;
    align-items: center;
    align-self: flex-start;

    padding: 0.3rem 0.5rem;
    padding: 0.5rem;
    border: 2px solid var(--deanny-cian);
    border-radius: 2.5rem;

    font-size: 1rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;

    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow:
      0 8px 30px rgb(168 85 247 / 30%),
      0 0 0 1px rgb(255 255 255 / 20%) inset;

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-header::before {
    content: "";

    position: absolute;
    top: 0;
    left: -100%;

    width: 100%;
    height: 100%;

    background: linear-gradient(
      90deg,
      transparent,
      rgb(255 255 255 / 30%),
      transparent
    );

    transition: left 0.6s ease;
  }

  .btn-header:hover::before {
    left: 100%;
  }

  .btn-header svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .btn-header:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow:
      0 12px 40px rgb(168 85 247 / 40%),
      0 0 0 1px rgb(255 255 255 / 30%) inset;
  }

  .btn-header:hover svg {
    transform: translateX(5px);
  }
</style>
