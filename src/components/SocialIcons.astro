---
import Github from "../assets/icons/github.svg";
import Linkedin from "../assets/icons/linkedin.svg";
import Twitter from "../assets/icons/twitter.svg";
import Instagram from "../assets/icons/instagram.svg";
---

<div class="social-icons">
  <a href="https://github.com/deabruces/" class="icons" aria-label="Visitar mi perfil de GitHub" target="_blank" rel="noopener noreferrer"><Github aria-hidden="true" /></a>
  <a href="https://www.linkedin.com/in/deannybruces/" class="icons" aria-label="Conectar en LinkedIn" target="_blank" rel="noopener noreferrer"
    ><Linkedin aria-hidden="true" /></a
  >
  <a href="https://x.com/deannybruces" class="icons" aria-label="Seguir en X (Twitter)" target="_blank" rel="noopener noreferrer"><Twitter aria-hidden="true" /></a>
  <a href="https://www.instagram.com/itsdeannybruces" class="icons" aria-label="Ver mi Instagram" target="_blank" rel="noopener noreferrer"
    ><Instagram aria-hidden="true" /></a
  >

  <style>
    .social-icons {
      display: flex;
      flex-direction: row;
      gap: 20px;
      align-items: center;
      justify-content: center;
    }

    .icons {
      display: flex;
      gap: 5px;
      align-items: center;
      justify-content: center;

      padding: 5px;
      border: 1px solid var(--acento-btn);
      border-radius: 20px;

      color: var(--acento-btn);
      text-decoration: none;

      background-color: var(--section-dark);

      transition: transform 0.3s ease;
    }

    .icons:hover {
      transform: scale(1.05);
      border: 1px solid var(--acento-btn-hover);
      color: var(--acento-btn-hover);
      background-color: var(--section-light);
    }
  </style>
</div>
