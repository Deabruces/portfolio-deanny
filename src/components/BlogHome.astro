---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import "../assets/styles/BlogHome.css";

// Traer todas las categorias
const categoryList = await getCollection("categories");
// Traer los últimos 3 posts ordenados por fecha
const posts = (await getCollection("posts"))
  .sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
  )
  .slice(0, 3);
---

<section class="blog-section content-grid" aria-labelledby="blog-title">
  <!-- Background Elements -->
  <div class="blog-background" aria-hidden="true">
    <div class="floating-blob blob-1"></div>
    <div class="floating-blob blob-2"></div>
    <div class="floating-blob blob-3"></div>
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
  </div>

  <div class="blog-container">
    <!-- Hero Section -->
    <div class="blog-hero">
      <div class="hero-badge">
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
        >
          <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
        </svg>
        <span>Blog</span>
      </div>

      <h2 id="blog-title" class="hero-title">
        Últimos <span class="gradient-text">post del blog</span>
      </h2>

      <p class="hero-subtitle">
        Aprende y aplica lo esencial del SEO, diseño web, accesibilidad,
        rendimiento y experiencia de usuario: recursos para programadores que
        inician y emprendedores que quieren potenciar su marca online.
      </p>
    </div>

    <!-- Blog Grid -->
    <div class="blog-grid" role="list">
      {
        posts.map((post) => (
          <article class="blog-card" role="listitem">
            <div class="card-image">
              <Image
                src={post.data.image}
                alt={`Imagen para ${post.data.title}`}
                loading="lazy"
              />
              <div class="image-overlay">
                <span class="post-date">
                  <svg
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                  >
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                  </svg>
                  {new Date(post.data.date).toLocaleDateString("es-ES", {
                    day: "numeric",
                    month: "short",
                  })}
                </span>
              </div>
            </div>

            <div class="blog-content">
              {post.data.categories && post.data.categories.length > 0 && (
                <div class="meta">
                  <span class="category">
                    {
                      categoryList.find(
                        (cat) => cat.id == post.data.categories[0].id,
                      )?.data.name
                    }
                  </span>
                </div>
              )}
              <h3>
                <a
                  href={`/blog/${post.id}`}
                  aria-label={`Leer más sobre ${post.data.title}`}
                >
                  {post.data.title}
                </a>
              </h3>
              <p>{post.data.summary}</p>
              <div class="card-footer">
                <a
                  class="read-more"
                  href={`/blog/${post.id}`}
                  aria-label={`Continuar leyendo ${post.data.title}`}
                >
                  Leer más
                  <svg
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                  >
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <!-- CTA Section -->
    <div class="cta-blog">
      <a
        href="/blog"
        class="btn-blog"
        aria-label="Explorar todos los artículos del blog"
      >
        <span>Explora más en mi blog</span>
        <svg
          width="22"
          height="22"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>
<style>
  /* ============================================
   Blog Section Styles - Modern Glassmorphic Design
   ============================================ */

  /* Main Section */
  .blog-section {
    position: relative;
    overflow: hidden;
    padding: 12rem 0;
    background: light-dark(
      linear-gradient(to top, #fdf4ff, #fef3c7, #fef9c3),
      linear-gradient(to top, #1e1b4b, #431407, #451a03)
    );
  }

  /* Background Elements */
  .blog-background {
    pointer-events: none;

    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;

    overflow: hidden;

    width: 100%;
    height: 100%;
  }

  /* Floating Blobs */
  .floating-blob {
    position: absolute;

    width: 40rem;
    height: 40rem;
    border-radius: 50%;

    opacity: 0.15;
    filter: blur(120px);

    animation: blobFloat 20s ease-in-out infinite;
  }

  .blob-1 {
    top: -10%;
    left: -10%;
    background: linear-gradient(135deg, #a855f7, #ec4899);
    animation-delay: 0s;
  }

  .blob-2 {
    top: 40%;
    right: -15%;
    background: linear-gradient(135deg, #06b6d4, #8b5cf6);
    animation-delay: 7s;
  }

  .blob-3 {
    bottom: -10%;
    left: 30%;
    background: linear-gradient(135deg, #f43f5e, #a855f7);
    animation-delay: 14s;
  }

  /* Gradient Orbs */
  .gradient-orb {
    position: absolute;

    border-radius: 50%;

    opacity: 0.2;
    filter: blur(80px);

    animation: orbPulse 15s ease-in-out infinite;
  }

  .orb-1 {
    top: 20%;
    right: 10%;

    width: 25rem;
    height: 25rem;

    background: radial-gradient(circle, #06b6d4, transparent);
  }

  .orb-2 {
    bottom: 10%;
    left: 15%;

    width: 30rem;
    height: 30rem;

    background: radial-gradient(circle, #a855f7, transparent);
  }

  /* Container */
  .blog-container {
    position: relative;
    z-index: 1;

    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .blog-hero {
    margin-bottom: 4rem;
    text-align: center;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-badge {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    margin-bottom: 1.5rem;
    padding: 0.6rem 1.2rem;
    border: 1px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 30%));
    border-radius: 2rem;

    font-size: 0.9rem;
    font-weight: 600;
    color: light-dark(#8b5cf6, #a78bfa);

    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 15%));
    backdrop-filter: blur(10px);

    animation: badgeGlow 3s ease-in-out infinite;
  }

  .hero-badge svg {
    width: 18px;
    height: 18px;
    color: light-dark(#8b5cf6, #a78bfa);
  }

  .hero-title {
    margin-bottom: 1rem;

    font-family: Poppins, sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.2;
    color: light-dark(#1e1b4b, #f8fafc);
  }

  .gradient-text {
    background: linear-gradient(135deg, #a855f7, #06b6d4, #ec4899);
    background-clip: text;
    background-clip: text;
    background-size: 200% 200%;

    animation: gradientShift 8s ease infinite;

    -webkit-text-fill-color: transparent;
  }

  .hero-subtitle {
    max-width: 800px;
    margin: 0 auto;

    font-size: clamp(1rem, 2vw, 1.2rem);
    line-height: 1.6;
    color: light-dark(#64748b, #cbd5e1);
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;

    margin-bottom: 3rem;

    opacity: 0;

    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.2s;
  }

  /* Blog Card */
  .blog-card {
    position: relative;

    overflow: hidden;
    display: flex;
    flex-direction: column;

    border: 2px solid light-dark(rgb(168 85 247 / 15%), rgb(168 85 247 / 30%));
    border-radius: 1.5rem;

    text-align: left;

    background: light-dark(rgb(255 255 255 / 80%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(20px);
    box-shadow:
      0 10px 40px light-dark(rgb(168 85 247 / 8%), rgb(0 0 0 / 20%)),
      0 0 0 1px light-dark(rgb(255 255 255 / 50%), rgb(255 255 255 / 5%)) inset;

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .blog-card:hover {
    transform: translateY(-8px);
    border-color: light-dark(rgb(168 85 247 / 30%), rgb(168 85 247 / 50%));
    box-shadow:
      0 20px 60px light-dark(rgb(168 85 247 / 15%), rgb(0 0 0 / 40%)),
      0 0 0 1px light-dark(rgb(255 255 255 / 80%), rgb(255 255 255 / 10%)) inset;
  }

  /* Card Image */
  .card-image {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 240px;
  }

  .card-image img {
    width: 100%;
    height: 100%;

    object-fit: cover;
    object-position: center;

    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .blog-card:hover .card-image img {
    transform: scale(1.08);
  }

  /* Image Overlay */
  .image-overlay {
    pointer-events: none;

    position: absolute;
    right: 0;
    bottom: 0;

    display: flex;
    justify-content: flex-end;

    padding: 1rem;
  }

  .post-date {
    pointer-events: auto;

    display: inline-flex;
    gap: 0.4rem;
    align-items: center;

    padding: 0.5rem 1rem;
    border-radius: 2rem;

    font-size: 0.85rem;
    font-weight: 700;
    color: #fff;

    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow:
      0 4px 15px rgb(168 85 247 / 30%),
      0 0 0 1px rgb(255 255 255 / 20%) inset;

    transition: all 0.3s ease;
  }

  .post-date svg {
    width: 14px;
    height: 14px;
  }

  /* Blog Content */
  .blog-content {
    display: flex;
    flex: 1;
    flex-direction: column;
    gap: 1rem;

    padding: 1.5rem;
  }

  /* Meta */
  .meta {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .category {
    display: inline-flex;
    align-items: center;

    padding: 0.4rem 1rem;
    border-radius: 2rem;

    font-size: 0.75rem;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 0.05em;

    background: linear-gradient(135deg, #06b6d4, #8b5cf6);
    box-shadow: 0 2px 10px rgb(6 182 212 / 20%);
  }

  /* Title */
  .blog-content h3 {
    margin: 0;

    font-family: Poppins, sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.4;
    color: light-dark(#1e1b4b, #f8fafc);

    transition: color 0.3s ease;
  }

  .blog-content h3 a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .blog-card:hover .blog-content h3 a {
    color: light-dark(#8b5cf6, #a78bfa);
  }

  /* Summary */
  .blog-content p {
    flex: 1;

    margin: 0;

    font-size: 0.95rem;
    line-height: 1.6;
    color: light-dark(#64748b, #cbd5e1);
  }

  /* Card Footer */
  .card-footer {
    display: flex;
    justify-content: flex-start;
    margin-top: auto;
  }

  .read-more {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    padding: 0.75rem 1.5rem;
    border: 1px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 30%));
    border-radius: 2rem;

    font-size: 0.9rem;
    font-weight: 600;
    color: light-dark(#8b5cf6, #a78bfa);
    text-decoration: none;

    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 15%));

    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .read-more svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .read-more:hover {
    transform: translateX(3px);

    border-color: transparent;

    color: #fff;

    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow: 0 8px 25px rgb(168 85 247 / 30%);
  }

  .read-more:hover svg {
    transform: translateX(3px);
  }

  /* CTA Section */
  .cta-blog {
    margin-top: 2rem;

    text-align: center;

    opacity: 0;

    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.4s;
  }

  .btn-blog {
    position: relative;

    overflow: hidden;
    display: inline-flex;
    gap: 0.75rem;
    align-items: center;

    padding: 1.25rem 2.5rem;
    border: 2px solid transparent;
    border-radius: 3rem;

    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;

    background: linear-gradient(135deg, #a855f7, #06b6d4);
    box-shadow:
      0 10px 40px rgb(168 85 247 / 30%),
      0 0 0 1px rgb(255 255 255 / 20%) inset;

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-blog::before {
    content: "";

    position: absolute;
    top: 0;
    left: -100%;

    width: 100%;
    height: 100%;

    background: linear-gradient(
      90deg,
      transparent,
      rgb(255 255 255 / 30%),
      transparent
    );

    transition: left 0.6s ease;
  }

  .btn-blog:hover::before {
    left: 100%;
  }

  .btn-blog svg {
    width: 22px;
    height: 22px;
    transition: transform 0.3s ease;
  }

  .btn-blog:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow:
      0 15px 50px rgb(168 85 247 / 40%),
      0 0 0 1px rgb(255 255 255 / 30%) inset;
  }

  .btn-blog:hover svg {
    transform: translateX(5px);
  }

  /* Focus Styles */
  .read-more:focus-visible,
  .btn-blog:focus-visible {
    outline: 3px solid light-dark(#a855f7, #a78bfa);
    outline-offset: 4px;
  }

  @media (width >= 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (width >= 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      transition-duration: 0.01ms !important;
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
    }
  }

  /* Responsive Adjustments */
  @media (width <= 767px) {
    .blog-section {
      padding: 4rem 0;
    }

    .blog-hero {
      margin-bottom: 3rem;
    }

    .card-image {
      height: 200px;
    }

    .blog-content {
      padding: 1.25rem;
    }
  }

  @media (width >= 1400px) {
    .blog-container {
      padding: 0 2rem;
    }
  }

  @keyframes blobFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }

    33% {
      transform: translate(-30px, -50px) scale(1.1);
    }

    66% {
      transform: translate(40px, 30px) scale(0.9);
    }
  }

  @keyframes orbPulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.2;
    }

    50% {
      transform: scale(1.1);
      opacity: 0.3;
    }
  }

  @keyframes badgeGlow {
    0%,
    100% {
      box-shadow: 0 0 20px rgb(168 85 247 / 20%);
    }

    50% {
      box-shadow: 0 0 30px rgb(168 85 247 / 40%);
    }
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Loading State */
  @keyframes shimmer {
    0% {
      background-position: -1000px 0;
    }

    100% {
      background-position: 1000px 0;
    }
  }
</style>
