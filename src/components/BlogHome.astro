---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import "../assets/styles/BlogHome.css";

// Traer todas las categorias
const categoryList = await getCollection("categories");
// Traer los últimos 3 posts ordenados por fecha
const posts = (await getCollection("posts"))
  .sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
  )
  .slice(0, 3);
---

<section class="blog-section content-grid" aria-labelledby="blog-title">
  <!-- Background Elements -->
  <div class="blog-background" aria-hidden="true">
    <div class="floating-blob blob-1"></div>
    <div class="floating-blob blob-2"></div>
    <div class="floating-blob blob-3"></div>
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
  </div>

  <div class="blog-container">
    <!-- Hero Section -->
    <div class="blog-hero">
      <div class="hero-badge">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
        </svg>
        <span>Blog</span>
      </div>

      <h2 id="blog-title" class="hero-title">
        Últimos <span class="gradient-text">post del blog</span>
      </h2>

      <p class="hero-subtitle">
        Aprende y aplica lo esencial del SEO, diseño web, accesibilidad,
        rendimiento y experiencia de usuario: recursos para programadores que
        inician y emprendedores que quieren potenciar su marca online.
      </p>
    </div>

    <!-- Blog Grid -->
    <div class="blog-grid" role="list">
      {
        posts.map((post) => (
          <article class="blog-card" role="listitem">
            <div class="card-image">
              <Image
                src={post.data.image}
                alt={`Imagen para ${post.data.title}`}
                loading="lazy"
              />
              <div class="image-overlay">
                <span class="post-date">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                  {new Date(post.data.date).toLocaleDateString("es-ES", {
                    day: "numeric",
                    month: "short",
                  })}
                </span>
              </div>
            </div>

            <div class="blog-content">
              {post.data.categories && post.data.categories.length > 0 && (
                <div class="meta">
                  <span class="category">
                    {
                      categoryList.find(
                        (cat) => cat.id == post.data.categories[0].id,
                      )?.data.name
                    }
                  </span>
                </div>
              )}
              <h3>
                <a href={`/blog/${post.id}`} aria-label={`Leer más sobre ${post.data.title}`}>
                  {post.data.title}
                </a>
              </h3>
              <p>{post.data.summary}</p>
              <div class="card-footer">
                <a class="read-more" href={`/blog/${post.id}`} aria-label={`Continuar leyendo ${post.data.title}`}>
                  Leer más
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <!-- CTA Section -->
    <div class="cta-blog">
      <a href="/blog" class="btn-blog" aria-label="Explorar todos los artículos del blog">
        <span>Explora más en mi blog</span>
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>
