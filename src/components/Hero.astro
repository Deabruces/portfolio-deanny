<style>
  .hero {
    display: grid;
    justify-items: center;
    align-items: center;
    align-content: center;
    isolation: isolate;
  }

  .title {
    font-weight: 700;
    text-align: center;
    margin-block: 1rem;
  }
  .saludo {
    font-weight: 600;
    text-align: center;
    margin-top: 4rem;
  }
  .frase {
    font-style: italic;
    text-align: center;
    max-width: 600px;
    font-size: 2rem;
  }

  .greeting {
    font-weight: 600;
    color: var(--acento-btn-hover);
    border-radius: 20px;
    border: 1px solid var(--acento-btn-hover);
    padding: 0.2rem 1rem;
  }
</style>
