<style>
  .hero {
    position: relative;

    overflow: hidden;
    display: flex;
    align-items: center;

    min-height: 100vh;
    padding-top: 7rem;

    background: var(--deanny-bg-color);
  }

  /* Floating gradient blobs */
  .blob-container {
    position: absolute;
    z-index: 0;
    inset: 0;
    overflow: hidden;
  }

  .blob {
    will-change: transform;

    position: absolute;

    border-radius: 40% 60% 70% 30% / 40% 50% 60%;

    opacity: 0.3;
    filter: blur(80px);

    animation: float 25s ease-in-out infinite;
  }

  .blob-1 {
    top: -10%;
    left: -5%;

    width: 500px;
    height: 500px;

    background: radial-gradient(
      circle,
      var(--deanny-purpura),
      var(--deanny-lila)
    );

    animation-duration: 30s;
    animation-delay: 0s;
  }

  .blob-2 {
    top: 30%;
    right: -10%;

    width: 400px;
    height: 400px;

    background: radial-gradient(
      circle,
      var(--deanny-cian),
      var(--deanny-cian-hover)
    );

    animation-duration: 25s;
    animation-delay: 5s;
  }

  .blob-3 {
    bottom: 10%;
    left: 20%;

    width: 350px;
    height: 350px;

    background: radial-gradient(
      circle,
      var(--deanny-lila),
      var(--deanny-purpura)
    );

    animation-duration: 35s;
    animation-delay: 10s;
  }

  .blob-4 {
    right: 25%;
    bottom: -5%;

    width: 300px;
    height: 300px;

    background: radial-gradient(
      circle,
      var(--deanny-cian-hover),
      var(--deanny-cian)
    );

    animation-duration: 28s;
    animation-delay: 15s;
  }

  /* Hero content */
  .hero-content {
    position: relative;
    z-index: 1;

    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;

    width: 100%;
  }

  /* Hero text */
  .hero-text {
    animation: fade-in-up 1s ease-out;
  }

  .hero-title {
    margin-bottom: 1.5rem;

    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--deanny-text-color);
  }

  .hero-title span {
    display: block;
  }

  .gradient-text {
    background: linear-gradient(
      135deg,
      var(--deanny-purpura),
      var(--deanny-cian)
    );
    background-clip: text;
    background-size: 200% 200%;

    animation: gradient-shift 3s ease-in-out infinite;

    -webkit-text-fill-color: transparent;
  }

  .highlight-text {
    color: var(--deanny-encabezados-text-color);
  }

  .hero-description {
    max-width: 600px;
    margin-bottom: 2.5rem;

    font-size: clamp(1.1rem, 1.5vw, 1.3rem);
    line-height: 1.8;
    color: var(--deanny-text-color);

    opacity: 0.9;
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .btn-primary,
  .btn-secondary {
    will-change: transform;
    cursor: pointer;

    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    padding: 1rem 2rem;
    border-radius: 50px;

    font-family: Poppins, sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;

    transition: all 0.3s ease;
  }

  .btn-primary {
    color: #fff;
    background: var(--deanny-cian);
    box-shadow: 0 8px 20px rgb(75 192 200 / 30%);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    background: var(--deanny-cian-hover);
    box-shadow: 0 12px 30px rgb(75 192 200 / 40%);
  }

  .btn-primary:active {
    transform: translateY(-1px);
  }

  .btn-icon {
    transition: transform 0.3s ease;
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }

  .btn-secondary {
    border: 2px solid var(--deanny-lila);
    color: var(--deanny-purpura);
    background: transparent;
  }

  .btn-secondary:hover {
    transform: translateY(-3px);
    color: #fff;
    background: var(--deanny-lila);
    box-shadow: 0 8px 20px rgb(195 140 246 / 30%);
  }

  .btn-primary:focus-visible,
  .btn-secondary:focus-visible {
    outline: 3px solid var(--deanny-cian);
    outline-offset: 4px;
  }

  /* Stats */
  .hero-stats {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .stat-number {
    font-family: Poppins, sans-serif;
    font-size: clamp(2rem, 3vw, 3rem);
    font-weight: 800;

    background: linear-gradient(
      135deg,
      var(--deanny-purpura),
      var(--deanny-cian)
    );
    background-clip: text;

    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--deanny-text-color);
    opacity: 0.7;
  }

  /* Hero visual */
  .hero-visual {
    position: relative;
    height: 500px;
    animation: fadeIn 1.2s ease-out 0.3s both;
  }

  .visual-card {
    will-change: transform;

    position: absolute;

    padding: 1.5rem;
    border: 2px solid var(--deanny-lila);
    border-radius: 20px;

    background: var(--deanny-bg-color);
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 30px rgb(0 0 0 / 10%);

    transition: all 0.3s ease;
    animation: card-float 6s ease-in-out infinite;
  }

  .visual-card:hover {
    transform: translateY(-10px) scale(1.05) !important;
    box-shadow: 0 15px 40px rgb(142 68 173 / 20%);
  }

  .card-1 {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .card-2 {
    top: 15%;
    right: 15%;
    animation-delay: 1.5s;
  }

  .card-3 {
    bottom: 25%;
    left: 5%;
    animation-delay: 3s;
  }

  .card-4 {
    right: 10%;
    bottom: 15%;
    animation-delay: 4.5s;
  }

  .card-icon {
    margin-bottom: 0.5rem;
    font-size: 2.5rem;
  }

  .card-text {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--deanny-text-color);
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);

    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;

    opacity: 0.6;

    animation: bounce 2s infinite;
  }

  .scroll-text {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--deanny-text-color);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .scroll-icon {
    color: var(--deanny-cian);
  }

  @media (width >= 768px) {
    .hero-content {
      grid-template-columns: 1.2fr 1fr;
      gap: 6rem;
    }
  }

  /* Accessibility - Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .blob,
    .visual-card,
    .scroll-indicator {
      animation: none;
    }

    .gradient-text {
      background-position: 0% 50%;
      animation: none;
    }

    .hero-text {
      opacity: 1;
      animation: none;
    }

    .hero-visual {
      opacity: 1;
      animation: none;
    }

    .btn-primary:hover,
    .btn-secondary:hover,
    .visual-card:hover {
      transform: none;
    }

    .btn-primary:hover .btn-icon {
      transform: none;
    }
  }

  /* Responsive adjustments */
  @media (width <= 767px) {
    .hero {
      min-height: auto;
      padding: 10rem 0 5rem;
    }

    .hero-visual {
      height: 400px;
      margin-top: 3rem;
    }

    .blob {
      filter: blur(60px);
    }

    .blob-1 {
      width: 300px;
      height: 300px;
    }

    .blob-2 {
      width: 250px;
      height: 250px;
    }

    .blob-3 {
      width: 200px;
      height: 200px;
    }

    .blob-4 {
      width: 180px;
      height: 180px;
    }

    .hero-stats {
      gap: 2rem;
    }

    .visual-card {
      padding: 1rem;
    }

    .card-icon {
      font-size: 2rem;
    }

    .card-text {
      font-size: 0.8rem;
    }

    .scroll-indicator {
      display: none;
    }
  }

  /* Dark mode enhancements */
  @media (prefers-color-scheme: dark) {
    .blob {
      opacity: 0.2;
    }

    .visual-card {
      background: rgb(26 26 26 / 80%);
      backdrop-filter: blur(20px);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }

    25% {
      transform: translate(50px, -50px) rotate(90deg) scale(1.1);
    }

    50% {
      transform: translate(-30px, 30px) rotate(180deg) scale(0.9);
    }

    75% {
      transform: translate(40px, 20px) rotate(270deg) scale(1.05);
    }
  }

  @keyframes gradient-shift {
    0%,
    100% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes card-float {
    0%,
    100% {
      transform: translateY(0);
    }

    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateX(-50%) translateY(0);
    }

    50% {
      transform: translateX(-50%) translateY(10px);
    }
  }

  /* Animations */
  @keyframes fade-in-up {
    from {
      transform: translateY(40px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }
</style>
