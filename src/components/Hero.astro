<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: var(--deanny-bg-color);
    padding-top: 7rem;
  }

  /* Floating gradient blobs */
  .blob-container {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  .blob {
    position: absolute;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    filter: blur(80px);
    opacity: 0.3;
    will-change: transform;
    animation: float 25s ease-in-out infinite;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    top: -10%;
    left: -5%;
    background: radial-gradient(circle, var(--deanny-purpura), var(--deanny-lila));
    animation-delay: 0s;
    animation-duration: 30s;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    top: 30%;
    right: -10%;
    background: radial-gradient(circle, var(--deanny-cian), var(--deanny-cian-hover));
    animation-delay: 5s;
    animation-duration: 25s;
  }

  .blob-3 {
    width: 350px;
    height: 350px;
    bottom: 10%;
    left: 20%;
    background: radial-gradient(circle, var(--deanny-lila), var(--deanny-purpura));
    animation-delay: 10s;
    animation-duration: 35s;
  }

  .blob-4 {
    width: 300px;
    height: 300px;
    bottom: -5%;
    right: 25%;
    background: radial-gradient(circle, var(--deanny-cian-hover), var(--deanny-cian));
    animation-delay: 15s;
    animation-duration: 28s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    25% {
      transform: translate(50px, -50px) rotate(90deg) scale(1.1);
    }
    50% {
      transform: translate(-30px, 30px) rotate(180deg) scale(0.9);
    }
    75% {
      transform: translate(40px, 20px) rotate(270deg) scale(1.05);
    }
  }

  /* Hero content */
  .hero-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
  }

  @media (min-width: 768px) {
    .hero-content {
      grid-template-columns: 1.2fr 1fr;
      gap: 6rem;
    }
  }

  /* Hero text */
  .hero-text {
    animation: fadeInUp 1s ease-out;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--deanny-text-color);
  }

  .hero-title span {
    display: block;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--deanny-purpura), var(--deanny-cian));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease-in-out infinite;
    background-size: 200% 200%;
  }

  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .highlight-text {
    color: var(--deanny-encabezados-text-color);
  }

  .hero-description {
    font-size: clamp(1.1rem, 1.5vw, 1.3rem);
    line-height: 1.8;
    margin-bottom: 2.5rem;
    color: var(--deanny-text-color);
    opacity: 0.9;
    max-width: 600px;
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 700;
    font-family: Poppins, sans-serif;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    will-change: transform;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--deanny-cian);
    color: #fff;
    box-shadow: 0 8px 20px rgba(75, 192, 200, 0.3);
  }

  .btn-primary:hover {
    background: var(--deanny-cian-hover);
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(75, 192, 200, 0.4);
  }

  .btn-primary:active {
    transform: translateY(-1px);
  }

  .btn-icon {
    transition: transform 0.3s ease;
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }

  .btn-secondary {
    background: transparent;
    color: var(--deanny-purpura);
    border: 2px solid var(--deanny-lila);
  }

  .btn-secondary:hover {
    background: var(--deanny-lila);
    color: #fff;
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(195, 140, 246, 0.3);
  }

  .btn-primary:focus-visible,
  .btn-secondary:focus-visible {
    outline: 3px solid var(--deanny-cian);
    outline-offset: 4px;
  }

  /* Stats */
  .hero-stats {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: clamp(2rem, 3vw, 3rem);
    font-weight: 800;
    font-family: Poppins, sans-serif;
    background: linear-gradient(135deg, var(--deanny-purpura), var(--deanny-cian));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--deanny-text-color);
    opacity: 0.7;
    font-weight: 600;
  }

  /* Hero visual */
  .hero-visual {
    position: relative;
    height: 500px;
    animation: fadeIn 1.2s ease-out 0.3s both;
  }

  .visual-card {
    position: absolute;
    background: var(--deanny-bg-color);
    border: 2px solid var(--deanny-lila);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    will-change: transform;
    animation: cardFloat 6s ease-in-out infinite;
  }

  .visual-card:hover {
    transform: translateY(-10px) scale(1.05) !important;
    box-shadow: 0 15px 40px rgba(142, 68, 173, 0.2);
  }

  .card-1 {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .card-2 {
    top: 15%;
    right: 15%;
    animation-delay: 1.5s;
  }

  .card-3 {
    bottom: 25%;
    left: 5%;
    animation-delay: 3s;
  }

  .card-4 {
    bottom: 15%;
    right: 10%;
    animation-delay: 4.5s;
  }

  @keyframes cardFloat {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .card-text {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--deanny-text-color);
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: bounce 2s infinite;
    opacity: 0.6;
  }

  .scroll-text {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--deanny-text-color);
  }

  .scroll-icon {
    color: var(--deanny-cian);
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(10px);
    }
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Accessibility - Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .blob,
    .visual-card,
    .scroll-indicator {
      animation: none;
    }

    .gradient-text {
      animation: none;
      background-position: 0% 50%;
    }

    .hero-text {
      animation: none;
      opacity: 1;
    }

    .hero-visual {
      animation: none;
      opacity: 1;
    }

    .btn-primary:hover,
    .btn-secondary:hover,
    .visual-card:hover {
      transform: none;
    }

    .btn-primary:hover .btn-icon {
      transform: none;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .hero {
      min-height: auto;
      padding: 10rem 0 5rem;
    }

    .hero-visual {
      height: 400px;
      margin-top: 3rem;
    }

    .blob {
      filter: blur(60px);
    }

    .blob-1 {
      width: 300px;
      height: 300px;
    }

    .blob-2 {
      width: 250px;
      height: 250px;
    }

    .blob-3 {
      width: 200px;
      height: 200px;
    }

    .blob-4 {
      width: 180px;
      height: 180px;
    }

    .hero-stats {
      gap: 2rem;
    }

    .visual-card {
      padding: 1rem;
    }

    .card-icon {
      font-size: 2rem;
    }

    .card-text {
      font-size: 0.8rem;
    }

    .scroll-indicator {
      display: none;
    }
  }

  /* Dark mode enhancements */
  @media (prefers-color-scheme: dark) {
    .blob {
      opacity: 0.2;
    }

    .visual-card {
      background: rgba(26, 26, 26, 0.8);
      backdrop-filter: blur(20px);
    }
  }
</style>
