<style>
  /* About Section - Modern Design */

  :root {
    --about-purple: #a855f7;
    --about-pink: #ff66c8;
    --about-cyan: #06b6d4;
    --about-yellow: #ffd600;
  }

  /* Section */
  .about-section {
    position: relative;

    overflow: hidden;

    min-height: 100vh;
    padding: 8rem 1.5rem 6rem;

    background: light-dark(
      radial-gradient(circle at top left, #fefcff, #f0f9ff),
      radial-gradient(circle at top left, #0f172a, #1e1b4b)
    );
  }

  /* Background Elements */
  .about-background {
    pointer-events: none;
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .floating-blob {
    position: absolute;

    width: 40rem;
    height: 40rem;
    border-radius: 50%;

    opacity: 0.15;
    filter: blur(120px);

    animation: blobFloat 20s ease-in-out infinite;
  }

  .blob-1 {
    top: -15%;
    left: -15%;
    background: linear-gradient(135deg, var(--about-purple), var(--about-pink));
  }

  .blob-2 {
    right: -10%;
    bottom: -10%;
    background: linear-gradient(135deg, var(--about-cyan), var(--about-yellow));
    animation-delay: 7s;
  }

  .blob-3 {
    top: 40%;
    right: 20%;
    background: linear-gradient(135deg, var(--about-pink), var(--about-purple));
    animation-delay: 14s;
  }

  .gradient-orb {
    position: absolute;

    width: 20rem;
    height: 20rem;
    border-radius: 50%;

    opacity: 0.2;
    filter: blur(60px);

    animation: orbPulse 8s ease-in-out infinite;
  }

  .orb-1 {
    top: 25%;
    left: 15%;
    background: radial-gradient(circle, var(--about-cyan), transparent);
  }

  .orb-2 {
    right: 20%;
    bottom: 30%;
    background: radial-gradient(circle, var(--about-pink), transparent);
    animation-delay: 4s;
  }

  /* Container */
  .about-container {
    position: relative;
    z-index: 10;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Hero Section */
  .about-hero {
    margin-bottom: 6rem;
    text-align: center;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .hero-badge {
    display: inline-flex;
    gap: 0.625rem;
    align-items: center;

    margin-bottom: 2rem;
    padding: 0.75rem 1.75rem;
    border: 2px solid light-dark(rgb(168 85 247 / 30%), rgb(255 102 200 / 40%));
    border-radius: 9999px;

    font-size: 0.9375rem;
    font-weight: 700;
    color: light-dark(#7c3aed, #ff66c8);

    background: light-dark(
      linear-gradient(135deg, rgb(168 85 247 / 15%), rgb(255 102 200 / 15%)),
      linear-gradient(135deg, rgb(168 85 247 / 25%), rgb(255 102 200 / 25%))
    );
    box-shadow: 0 8px 32px rgb(168 85 247 / 20%);
  }

  .hero-badge svg {
    animation: pulse 2s ease-in-out infinite;
  }

  .hero-title {
    margin-bottom: 1.5rem;

    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 900;
    line-height: 1.1;
    color: light-dark(#0f172a, #fff);
  }

  .gradient-text {
    background: linear-gradient(
      135deg,
      var(--about-purple),
      var(--about-pink),
      var(--about-cyan)
    );
    background-clip: text;
    background-size: 200% 200%;

    animation: gradientShift 8s ease infinite;

    -webkit-text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    font-weight: 600;
    color: light-dark(#64748b, #94a3b8);
  }

  /* Profile Section */
  .profile-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  /* Profile Card */
  .profile-card {
    position: relative;

    padding: 2.5rem;
    border: 2px solid light-dark(rgb(168 85 247 / 15%), rgb(168 85 247 / 30%));
    border-radius: 2.5rem;

    background: light-dark(rgb(255 255 255 / 80%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(20px);
    box-shadow: 0 20px 60px light-dark(rgb(168 85 247 / 10%), rgb(0 0 0 / 30%));

    animation: fadeInLeft 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
  }

  .profile-image-wrapper {
    position: relative;

    overflow: hidden;

    width: fit-content;
    width: 220px;
    height: 220px;
    margin: 0 auto 2rem;
    border: 4px solid light-dark(#fff, rgb(30 27 75 / 80%));
    border-radius: 50%;

    object-fit: cover;
    box-shadow: 0 12px 40px rgb(168 85 247 / 30%);

    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .image-glow {
    position: absolute;
    z-index: -1;
    inset: -20px;

    border-radius: 50%;

    opacity: 0.4;
    background: linear-gradient(135deg, var(--about-purple), var(--about-pink));
    filter: blur(40px);

    animation: pulse 3s ease-in-out infinite;
  }

  .profile-image {
    scale: 1.2;
    width: 100%;
    height: 100%;
  }

  .profile-image:hover {
    transform: scale(1.05) rotate(2deg);
  }

  .image-border {
    position: absolute;
    z-index: -1;
    inset: -8px;

    border: 2px solid light-dark(rgb(168 85 247 / 30%), rgb(168 85 247 / 50%));
    border-radius: 50%;
  }

  .profile-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .location-badge {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;

    padding: 0.75rem 1.5rem;
    border: 1px solid light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 30%));
    border-radius: 9999px;

    font-size: 1rem;
    font-weight: 600;
    color: light-dark(#7c3aed, #c38cf6);

    background: light-dark(rgb(168 85 247 / 10%), rgb(168 85 247 / 20%));
  }

  .section-label {
    margin-bottom: 0.75rem;

    font-size: 0.875rem;
    font-weight: 700;
    color: light-dark(#64748b, #94a3b8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .languages-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .language-tag {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;

    padding: 0.625rem 1.25rem;
    border: 1px solid light-dark(rgb(6 182 212 / 30%), rgb(6 182 212 / 40%));
    border-radius: 9999px;

    font-size: 0.9375rem;
    font-weight: 600;
    color: light-dark(#0891b2, #22d3ee);

    background: light-dark(rgb(6 182 212 / 10%), rgb(6 182 212 / 20%));

    transition: all 0.3s ease;
  }

  .language-tag:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgb(6 182 212 / 30%);
  }

  .language-tag svg {
    width: 12px;
    height: 12px;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    animation: fadeInRight 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s both;
  }

  .stat-card {
    position: relative;

    display: flex;
    gap: 1.5rem;
    align-items: center;

    padding: 2rem;
    border: 2px solid light-dark(rgb(168 85 247 / 15%), rgb(168 85 247 / 30%));
    border-radius: 2rem;

    background: light-dark(rgb(255 255 255 / 80%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(20px);
    box-shadow: 0 10px 40px light-dark(rgb(168 85 247 / 10%), rgb(0 0 0 / 20%));

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .stat-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px
      light-dark(rgb(168 85 247 / 20%), rgb(168 85 247 / 40%));
  }

  .stat-icon {
    display: flex;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;

    width: 60px;
    height: 60px;
    border-radius: 1.25rem;

    box-shadow: 0 8px 24px rgb(168 85 247 / 30%);
  }

  .stat-purple {
    color: white;
    background: linear-gradient(135deg, #a855f7, #c084fc);
  }

  .stat-cyan {
    color: white;
    background: linear-gradient(135deg, #06b6d4, #22d3ee);
  }

  .stat-pink {
    color: white;
    background: linear-gradient(135deg, #ff66c8, #fda4af);
  }

  .stat-content {
    flex: 1;
  }

  .stat-value {
    margin-bottom: 0.25rem;

    font-size: 2rem;
    font-weight: 900;

    background: linear-gradient(135deg, var(--about-purple), var(--about-pink));
    background-clip: text;

    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: light-dark(#64748b, #94a3b8);
  }

  /* About Content */
  .about-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .content-card {
    position: relative;

    padding: 2.5rem;
    border: 2px solid light-dark(rgb(168 85 247 / 15%), rgb(168 85 247 / 30%));
    border-radius: 2.5rem;

    background: light-dark(rgb(255 255 255 / 80%), rgb(30 27 75 / 50%));
    backdrop-filter: blur(20px);
    box-shadow: 0 20px 60px light-dark(rgb(168 85 247 / 10%), rgb(0 0 0 / 30%));

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  .content-card:nth-child(1) {
    animation-delay: 0.6s;
  }

  .content-card:nth-child(2) {
    animation-delay: 0.7s;
  }

  .content-card:nth-child(3) {
    animation-delay: 0.8s;
  }

  .content-card:nth-child(4) {
    animation-delay: 0.9s;
  }

  .content-card:hover {
    transform: translateY(-4px);
    border-color: light-dark(rgb(168 85 247 / 30%), rgb(168 85 247 / 50%));
  }

  .highlight-card {
    border-color: light-dark(rgb(168 85 247 / 30%), rgb(255 102 200 / 40%));
    background: light-dark(
      linear-gradient(135deg, rgb(168 85 247 / 10%), rgb(255 102 200 / 10%)),
      linear-gradient(135deg, rgb(168 85 247 / 20%), rgb(255 102 200 / 20%))
    );
  }

  .content-title {
    display: flex;
    gap: 0.75rem;
    align-items: center;

    margin-bottom: 1.5rem;

    font-size: 1.75rem;
    font-weight: 800;
    color: light-dark(#0f172a, #fff);
  }

  .title-icon {
    font-size: 2rem;
  }

  .content-text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: light-dark(#475569, #cbd5e1);
  }

  .content-text p {
    margin-bottom: 1.25rem;
  }

  .content-text p:last-child {
    margin-bottom: 0;
  }

  .content-text strong {
    font-weight: 700;
    color: light-dark(#1e293b, #e2e8f0);
  }

  /* CTA Button */
  .cta-button {
    display: inline-flex;
    gap: 0.75rem;
    align-items: center;

    margin-top: 2rem;
    padding: 1.125rem 2rem;
    border: 1px solid var(--deanny-cian);
    border-radius: 9999px;

    font-size: 1.0625rem;
    font-weight: 700;
    color: white;
    text-decoration: none;

    background: linear-gradient(135deg, var(--about-purple), var(--about-pink));
    box-shadow: 0 12px 32px rgb(168 85 247 / 30%);

    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .cta-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 48px rgb(168 85 247 / 40%);
  }

  .cta-button:focus {
    outline: 3px solid light-dark(var(--about-purple), var(--about-pink));
    outline-offset: 4px;
  }

  .button-arrow {
    transition: transform 0.3s ease;
  }

  .cta-button:hover .button-arrow {
    transform: translateX(4px);
  }

  @media (width >= 768px) {
    .profile-section {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }
  }

  @media (width >= 1024px) {
    .profile-section {
      grid-template-columns: 1fr 2fr;
      gap: 3rem;
    }
  }

  @media (width >= 640px) {
    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (width >= 768px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Responsive */
  @media (width <= 767px) {
    .about-section {
      padding: 6rem 1rem 4rem;
    }

    .about-hero {
      margin-bottom: 3rem;
    }

    .profile-card {
      padding: 2rem 1.5rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .content-card {
      padding: 2rem 1.5rem;
    }

    .content-title {
      font-size: 1.5rem;
    }

    .content-text {
      font-size: 1rem;
    }
  }

  /* Animations */
  @keyframes blobFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }

    33% {
      transform: translate(-30px, -50px) scale(1.1);
    }

    66% {
      transform: translate(40px, 30px) scale(0.9);
    }
  }

  @keyframes orbPulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.2;
    }

    50% {
      transform: scale(1.15);
      opacity: 0.3;
    }
  }

  @keyframes fadeInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

