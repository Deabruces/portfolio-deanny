---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<div class="container-btn">
  <a href={href} class="btn--action">
    <slot />
  </a>
</div>

<style>
  .container-btn {
    display: flex;
  }
  .btn--action {
    width: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: relative;
    background-color: var(--acento-btn);
    color: var(--primary-color);
    border-radius: 20px;
    gap: 5px;
    border-width: initial;
    border-style: none;
    border-color: initial;
    border-image: initial;
    padding: 11px 14px;
    margin-top: 40px;
    margin-bottom: 2rem;
    font-weight: 600;
    font-size: clamp(0.875rem, 1rem + 0.5vw, 1.125rem);
    transition: background-color 1.2s ease;
  }

  @property --angulo {
    syntax: "<angle>";
    inherits: false;
    initial-value: 0deg;
  }

  .btn--action::after,
  .btn--action::before {
    content: "";
    background: conic-gradient(
      from var(--angulo),
      var(--acento-btn),
      var(--secondary-color),
      var(--acento-btn-hover)
    );
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: -5;
    padding: 2px;
    box-sizing: unset;
    border-radius: 20px;
    animation: girar 3s linear infinite;
  }
  .btn--action::after {
    animation-delay: 0s;
  }
  .btn--action::before {
    filter: blur(64px);
    opacity: 0.5;
    animation-delay: 1s;
  }

  @keyframes girar {
    0% {
      --angulo: 0deg;
    }
    100% {
      --angulo: 360deg;
    }
  }

  .btn--action:hover {
    background-color: var(--acento-btn-hover);
  }
</style>
