const waLink = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
---

<style>
  .whatsapp-btn {
    position: fixed;
    bottom: 40px;
    right: 40px;
    background-color: #4b2e83;
    color: #fff;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    box-shadow: 2px 2px 3px #999;
    z-index: 9999;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .whatsapp-btn:hover {
    background: #9a7dcc; /* Hover con color secundario */
    transform: scale(1.1);
  }

  .whatsapp-icon {
    width: 28px;
    height: 28px;
    fill: #f9f7fa;
  }

  /* Tooltip */
  .tooltip {
    visibility: hidden;
    width: max-content;
    background-color: #1b184c; /* Color oscuro de tu paleta */
    color: #f9f7fa;
    text-align: center;
    border-radius: 6px;
    padding: 6px 10px;
    font-size: 14px;
    position: absolute;
    right: 70px;
    bottom: 10px;
    opacity: 0;
    transition: opacity 0.3s;
    white-space: nowrap;
  }

  .whatsapp-btn:hover .tooltip {
    visibility: visible;
    opacity: 1;
  }
</style>

