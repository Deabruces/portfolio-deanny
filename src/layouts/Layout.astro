---
import Footer from "@components/Footer.astro";
import WhatsAppButton from "../components/globals/WhatsAppButton.astro";
import ServicesChatbot from "@components/ServicesChatbot.jsx";
import SEOStructuredData from "@components/SEOStructuredData.astro";
import Header from "@components/globals/Header.astro";
import "@styles/reset.css";
import "@styles/grid.css";
import "@styles/global.css";
import FloatingMenu from "@components/globals/FloatingMenu.astro";
interface Props {
  title?: string;
  description: string;
  image?: string;
  keywords?: string;
  author?: string;
  type?: "website" | "article" | "blog" | "portfolio";
  publishedTime?: string;
  modifiedTime?: string;
}
const {
  title,
  description,
  image,
  keywords,
  author,
  type,
  publishedTime,
  modifiedTime,
} = Astro.props;
const pageTitle = title ? `${title} | Deanny Bruces` : "Deanny Bruces";
const pageImage = image
  ? new URL(image, Astro.url.origin).href
  : new URL("/favicon_dea-logo.png", Astro.url.origin).href;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        //@ts-expect-error is a tag manager function
        w[l] = w[l] || [];
        //@ts-expect-error is a tag manager function
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        const f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        //@ts-expect-error is a tag manager function
        j.async = true;
        //@ts-expect-error is a tag manager function
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        //@ts-expect-error is a tag manager function
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-TWLPSPDH");
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- Performance hints -->
    <link rel="dns-prefetch" href="//www.googletagmanager.com" />
    <link href="https://formsubmit.co" rel="preconnect" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={Astro.url} />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content={author || "Deanny Bruces"} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#8e44ad" />

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={pageImage} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content={type || "website"} />
    <meta property="og:site_name" content="Deanny Bruces - Portfolio" />
    <meta property="og:locale" content="es_ES" />
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }
    {author && <meta property="article:author" content={author} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={pageImage} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO Structured Data -->
    <SEOStructuredData
      type={type}
      title={pageTitle}
      description={description}
      url={Astro.url.href}
      image={pageImage}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
    />
  </head>

  <body>
    <!-- Skip Navigation Link -->
    <a href="#main-content" class="skip-nav">Saltar al contenido principal</a>

    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-TWLPSPDH"
        title="Google Tag Manager Debugger"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    <Header />
    <main id="main-content"><slot /></main>

    <WhatsAppButton />

    <Footer />

    <script>
      // Header scroll behavior
      const header = document.getElementById("main-header");

      window.addEventListener("scroll", () => {
        const currentScroll = window.pageYOffset;

        if (currentScroll > 50) {
          header?.classList.add("scrolled");
        } else {
          header?.classList.remove("scrolled");
        }
      });
    </script>
  </body>
</html>

<style>
  /* Skip Navigation Link */
  .skip-nav {
    position: absolute;
    z-index: 1000;
    top: -40px;
    left: 6px;

    padding: 8px;
    border-radius: 4px;

    color: white;
    text-decoration: none;

    background-color: var(--acento-btn);

    transition: top 0.3s;
  }

  .skip-nav:focus {
    top: 6px;
  }

  body {
    overflow-x: hidden;
    font-family: Lato, sans-serif;
    color: var(--bg-color);
    background-color: var(--background-color);
  }

  /* Focus styles for better accessibility */
  *:focus {
    outline: 2px solid var(--acento-btn);
    outline-offset: 2px;
  }

  /* Better focus for interactive elements */
  a:focus,
  button:focus,
  input:focus,
  textarea:focus,
  select:focus {
    border-radius: 4px;
    outline: 2px solid var(--acento-btn);
    outline-offset: 2px;
  }
</style>
