---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Clima from "../components/Clima.astro";
import Hora from "../components/Hora.astro";
import Navigation from "../components/Navigation.astro";
import "../assets/styles/reset.css";
import "../assets/styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <title>Portfolio Deanny</title>
  </head>
  <body>
    <div class="stars"></div>
    <header class="header">
      <Header>
        <Clima slot="widget-left" />
        <Navigation />
        <Hora slot="widget-right" />
      </Header>
    </header>

    <main class="main"><slot /></main>

    <footer class="footer"><Footer /></footer>
  </body>
</html>

<style>
  html,
  body {
    body {
      margin: 0;
      padding: 0;
      background: linear-gradient(-45deg, #20052e, #3b0d54, #581c68, #43154f);
      background-size: 600% 600%;
      animation: galaxyDark 25s ease infinite;
      font-family: "Inter", sans-serif;
      color: white;
    }

    /* Animaci√≥n del gradiente */
    @keyframes galaxyDark {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    /* Estrellas animadas sutiles */
    .stars {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: transparent
        url("https://assets.codepen.io/13471/sparkle-stars.png") repeat top
        center;
      animation: moveStars 200s linear infinite;
      z-index: -1;
      opacity: 0.1;
      pointer-events: none;
    }

    @keyframes moveStars {
      from {
        background-position: 0 0;
      }
      to {
        background-position: 10000px 5000px;
      }
    }
  }

