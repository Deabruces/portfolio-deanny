---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hora from "../components/Hora.astro";
import Navigation from "../components/Navigation.astro";
import "../assets/styles/reset.css";
import "../assets/styles/grid.css";
import "../assets/styles/global.css";
import BurgerMenu from "../components/BurgerMenu.astro";
interface Props {
  title?: string;
  description: string;
  image?: string;
  keywords?: string;
  author?: string;
  type?: "website" | "article" | "blog" | "portfolio";
  publishedTime?: string;
  modifiedTime?: string;
}
const {
  title,
  description,
  image,
  keywords,
  author,
  type,
  publishedTime,
  modifiedTime,
} = Astro.props;
const pageTitle = title ? `${title} | Deanny Bruces` : "Deanny Bruces";
const pageImage = image
  ? new URL(image, Astro.url.origin).href
  : new URL("/favicon_dea-logo.png", Astro.url.origin).href;

import WhatsAppButton from "../components/WhatsAppButton.astro";
import SEOStructuredData from "../components/SEOStructuredData.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        //@ts-ignore
        w[l] = w[l] || [];
        //@ts-ignore
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        //@ts-ignore
        j.async = true;
        //@ts-ignore
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        //@ts-ignore
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-TWLPSPDH");
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon_dea-logo.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={Astro.url} />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content={author || "Deanny Bruces"} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#8e44ad" />

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={pageImage} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content={type || "website"} />
    <meta property="og:site_name" content="Deanny Bruces - Portfolio" />
    <meta property="og:locale" content="es_ES" />
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }
    {author && <meta property="article:author" content={author} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={pageImage} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO Structured Data -->
    <SEOStructuredData
      type={type}
      title={pageTitle}
      description={description}
      url={Astro.url.href}
      image={pageImage}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
    />
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-TWLPSPDH"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <header class="full-width">
      <div class="header-desktop">
        <Header>
          <div class="container-logo">
            <a href="/" class="logo">Deanny Bruces</a>
          </div>
          <Navigation />
          <Hora slot="widget-right" />
        </Header>
      </div>
      <div class="header-mobile">
        <div class="container-logo">
          <a href="/" class="logo">Deanny Bruces</a>
        </div>
        <div class="burger-menu">
          <BurgerMenu />
        </div>
      </div>
    </header>
  </body><main><slot /></main>

  <WhatsAppButton />

  <footer class="full-width footer">
    <Footer />
  </footer>
</html>

<style>
  body {
    background-color: var(--background-color);
    font-family: Lato, sans-serif;
    color: var(--bg-color);
    overflow-x: hidden;
  }

  header {
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 100;
  }

  .header-desktop {
    display: none;
  }

  .header-mobile {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 20px;
    background-color: var(--primary-color);
    opacity: 0.8;
  }

  .burger-menu {
    display: flex;
    justify-content: end;
  }

  .container-logo {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .logo {
    font-size: 1.8rem;
    font-weight: 800;
    color: var(--acento-btn);
  }

  @media (width >= 768px) {
    .header-desktop {
      display: block;
    }

    .header-mobile {
      display: none;
    }
  }
</style>
